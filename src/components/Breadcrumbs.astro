---
export interface Props {
  items: Array<{
    text: string;
    href?: string;
    current?: boolean;
  }>;
}

const { items } = Astro.props;
---

<!-- Breadcrumbs - At Very Top of Page -->
<div class="bg-gradient-to-r from-slate-900/90 via-blue-900/90 to-slate-900/90 backdrop-blur-lg border-b border-blue-700/30 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
    <nav aria-label="Breadcrumb" class="breadcrumb-top">
      <ol>
        {items.map((item, index) => (
          <li class={item.current ? 'current' : ''}>
            {item.href ? (
              <a href={item.href}>{item.text}</a>
            ) : (
              <span aria-current={item.current ? 'page' : undefined}>{item.text}</span>
            )}
          </li>
        ))}
      </ol>
    </nav>
  </div>
</div>

<style>
  /* Top Breadcrumb Styling */
  .breadcrumb-top {
    font-size: 14px;
    margin-bottom: 0;
  }
  
  .breadcrumb-top ol {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
    align-items: center;
  }
  
  .breadcrumb-top li + li::before {
    content: ">";
    padding: 0 8px;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
  }
  
  .breadcrumb-top a {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.9);
    transition: color 0.2s ease;
    font-weight: 500;
  }
  
  .breadcrumb-top a:hover {
    color: rgba(255, 255, 255, 1);
    text-decoration: underline;
  }
  
  .breadcrumb-top li:last-child {
    color: rgba(255, 255, 255, 0.95);
    font-weight: 600;
  }
  
  /* Mobile responsiveness for top breadcrumbs */
  @media (max-width: 640px) {
    .breadcrumb-top {
      font-size: 12px;
    }
    
    .breadcrumb-top ol {
      flex-wrap: wrap;
    }
    
    .breadcrumb-top li + li::before {
      padding: 0 4px;
    }
  }
</style>
