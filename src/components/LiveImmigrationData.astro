---
import { getLatestDrawsForAllPrograms } from '../lib/immigration-data'
import { formatDrawDate, formatCutoffScore, formatInvitations } from '../lib/immigration-data'

// Fetch latest immigration draws
const latestDraws = await getLatestDrawsForAllPrograms()
---

<section class="py-16 bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        Live Immigration Draw Updates
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Get the latest Canadian immigration draw results, cutoff scores, and invitation counts in real-time.
      </p>
    </div>

    {latestDraws.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {latestDraws.map((draw) => (
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                {draw.program}
              </span>
              <span class="text-sm text-gray-500 dark:text-gray-400">
                {formatDrawDate(draw.draw_date)}
              </span>
            </div>
            
            <div class="space-y-3">
              <div>
                <div class="text-sm text-gray-500 dark:text-gray-400">Cutoff Score</div>
                <div class="text-2xl font-bold text-gray-900 dark:text-white">
                  {formatCutoffScore(draw.cutoff_score)}
                </div>
              </div>
              
              <div>
                <div class="text-sm text-gray-500 dark:text-gray-400">Invitations Issued</div>
                <div class="text-xl font-semibold text-green-600 dark:text-green-400">
                  {formatInvitations(draw.invitations_issued)}
                </div>
              </div>
            </div>
            
            {draw.tie_breaking_rule && (
              <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                <div class="text-xs text-gray-500 dark:text-gray-400">Tie-Breaking Rule</div>
                <div class="text-sm text-gray-700 dark:text-gray-300">{draw.tie_breaking_rule}</div>
              </div>
            )}
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full mb-4">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No Data Available</h3>
        <p class="text-gray-600 dark:text-gray-400">
          Immigration draw data will appear here once connected to your Supabase database.
        </p>
      </div>
    )}

    <div class="text-center mt-8">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        Data updates automatically â€¢ Last refreshed: {new Date().toLocaleTimeString()}
      </p>
    </div>
  </div>
</section>

