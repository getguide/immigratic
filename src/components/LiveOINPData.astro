---
import { getLatestOINPDraw } from '../lib/immiwatch-data';

// Fetch latest OINP draw data
const latestDraw = await getLatestOINPDraw();

// Format the date
const formattedDate = latestDraw ? new Date(latestDraw.drawDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : 'No data available';

// Get program abbreviation (e.g., "OINP-International Students" -> "International Students")
const programAbbr = latestDraw ? latestDraw.programName : 'N/A';

// Get scoring system (CRS or PNP)
const scoringSystem = latestDraw ? latestDraw.scoringSystem : 'N/A';
---

<!-- Enhanced Latest Draw Data -->
<div class="ontario-tracker p-4 bg-gradient-to-r from-orange-50 via-yellow-50 to-amber-50 dark:from-orange-900/20 dark:via-yellow-900/20 dark:to-amber-900/20 rounded-xl border border-orange-200 dark:border-orange-700 hover:border-orange-400 dark:hover:border-orange-500 transition-all duration-500 group-hover:scale-105 transform-gpu hover:shadow-lg">
  <!-- Latest Draw Name -->
  <div class="flex items-center justify-between mb-2">
    <span class="text-sm font-medium text-orange-700 dark:text-orange-300">Latest Draw</span>
    <span class="text-xs text-orange-600 dark:text-orange-400 animate-pulse">ðŸ”´ Live</span>
  </div>
  
  <!-- Score -->
  <div class="text-3xl font-bold text-orange-600 dark:text-orange-400 group-hover:scale-110 transition-transform duration-300">
    {scoringSystem} {latestDraw ? latestDraw.crsScore : 'N/A'}
  </div>
  
  <!-- Stream Type -->
  <div class="text-xs text-orange-600 dark:text-orange-400">
    {programAbbr}
  </div>
</div>
