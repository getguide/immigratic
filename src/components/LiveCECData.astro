---
import { getLatestCECDraw } from '../lib/immigration-data';

// Fetch latest CEC draw data
let latestCECDraw;
try {
  latestCECDraw = await getLatestCECDraw();
  console.log('LiveCECData - Raw data:', latestCECDraw);
  console.log('LiveCECData - Component loaded successfully');
  console.log('LiveCECData - Data type:', typeof latestCECDraw);
  console.log('LiveCECData - Has data:', !!latestCECDraw);
  
  // Force console output with alert for debugging
  if (typeof window !== 'undefined') {
    alert(`DEBUG: CEC Data loaded! Score: ${latestCECDraw?.cutoffScore}, Date: ${latestCECDraw?.drawDate}`);
  }
} catch (error) {
  console.error('LiveCECData - Error fetching data:', error);
  latestCECDraw = null;
}
---

<!-- Latest Express Entry Draw - Live Data -->
<!-- DEBUG: Component is rendering -->
