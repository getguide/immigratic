  <!-- DEBUG INFO - VISIBLE ON PAGE -->
  <div class="mb-4 p-3 bg-yellow-100 border border-yellow-300 rounded-lg text-xs">
    <strong>DEBUG:</strong> Component loaded at {new Date().toLocaleTimeString()}
    <br>Data: {latestCECDraw ? 'FOUND' : 'NOT FOUND'}
    <br>CRS Score: {latestCECDraw?.cutoffScore || 'N/A'}
    <br>Date: {latestCECDraw?.drawDate || 'N/A'}
  </div>
  <div class="flex items-center gap-4 mb-6">
    <div class="w-16 h-16 bg-gradient-to-br from-yellow-500 to-orange-600 rounded-2xl flex items-center justify-center group-hover:scale-110 group-hover:rotate-3 transition-all duration-500 animate-float-gentle">
      <span class="text-2xl group-hover:scale-110 transition-transform duration-500">ðŸ“Š</span>
    </div>
    <div>
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Latest Express Entry Draw</h3>
      {latestCECDraw ? (
        <p class="text-gray-600 dark:text-gray-300">Updated {latestCECDraw.drawDate}</p>
      ) : (
        <p class="text-gray-600 dark:text-gray-300">Data loading...</p>
