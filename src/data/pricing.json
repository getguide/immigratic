    "calculation_logic": {
      "total_cost": {
        "description": "Total cost is the sum of the principal applicant's base fee, spouse's fee (if applicable), dependents' fees (if applicable), and any add-ons",
        "steps": [
          {
            "step": "Select principal applicant type (inland or outland) and application type",
            "base_fee": "base_fees.principal_applicant.[inland/outland].[application_type]"
          },
          {
            "step": "Add spouse fee if applicable",
            "condition": "spouse_present",
            "base_fee": "base_fees.spouse.[inland/outland].[application_type]"
          },
          {
            "step": "Add dependents' fees if applicable",
            "condition": "dependents_present",
            "base_fee": "base_fees.dependents.[inland/outland].[application_type] * number_of_dependents"
          },
          {
            "step": "Add prior refusal fee if applicable",
            "condition": "prior_refusal",
            "add_on_fee": "add_ons.prior_refusal"
          }
        ],
