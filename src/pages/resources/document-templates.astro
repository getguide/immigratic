---
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
---

<Layout title="Document Templates - Immigratic">
  <Breadcrumbs 
    items={[
      { text: "Home", href: "/" },
      { text: "Resources", href: "/resources/" },
      { text: "Document Templates", current: true }
    ]}
  />

  <!-- Full Screen Hero -->
  <section class="min-h-screen bg-gradient-to-br from-emerald-50 via-white to-teal-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 flex items-center justify-center relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute top-20 left-20 w-96 h-96 bg-emerald-500/5 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-teal-500/5 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-r from-emerald-400/10 to-teal-400/10 rounded-full blur-3xl animate-pulse-slow"></div>
      
      <!-- Floating Particles -->
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-emerald-400/30 rounded-full animate-float-gentle" style="animation-delay: 0s;"></div>
      <div class="absolute top-1/3 right-1/3 w-1.5 h-1.5 bg-teal-300/40 rounded-full animate-float-gentle" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-1/4 left-1/3 w-1 h-1 bg-green-300/50 rounded-full animate-float-gentle" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 right-1/4 w-2.5 h-2.5 bg-cyan-400/20 rounded-full animate-float-gentle" style="animation-delay: 3s;"></div>
    </div>
    
    <!-- Main Content -->
    <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
      <!-- Icon -->
      <div class="mb-8 flex justify-center">
        <div class="w-24 h-24 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-3xl flex items-center justify-center shadow-2xl animate-float-gentle">
          <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
      </div>
      
      <!-- Coming Soon Badge -->
      <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-emerald-500 to-teal-600 text-white text-sm font-medium rounded-full mb-6 shadow-lg">
        <span class="w-2 h-2 bg-white rounded-full mr-2 animate-pulse"></span>
        Coming Soon
      </div>
      
      <!-- Main Heading -->
      <h1 class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
        <span class="block">Document</span>
        <span class="block bg-gradient-to-r from-emerald-600 to-teal-600 bg-clip-text text-transparent">Templates</span>
      </h1>
      
      <!-- Subheading -->
      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed">
        Professional, immigration-ready document templates that save you time and ensure accuracy. From letters of explanation to employment references, we've got the templates you need.
      </p>
      
      <!-- Launch Date -->
      <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-xl border border-gray-200 dark:border-gray-700 mb-8">
        <div class="text-sm text-gray-500 dark:text-gray-400 mb-2">Estimated Launch</div>
        <div class="text-2xl font-bold text-gray-900 dark:text-white">Q1 2026</div>
      </div>
      
      <!-- Features Preview -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 bg-emerald-100 dark:bg-emerald-900/20 rounded-xl flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">IRCC Compliant</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Templates meet official requirements</p>
        </div>
        
        <div class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 bg-teal-100 dark:bg-teal-900/20 rounded-xl flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-teal-600 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Easy Customization</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Fill in your details and download</p>
        </div>
        
        <div class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 bg-green-100 dark:bg-green-900/20 rounded-xl flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Multiple Formats</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Word, PDF, and Google Docs</p>
        </div>
      </div>
      
      <!-- CTA -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/resources" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-emerald-600 to-teal-600 text-white font-semibold rounded-xl hover:from-emerald-700 hover:to-teal-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
          <span>Explore Resources</span>
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a href="/contact" class="inline-flex items-center px-8 py-4 bg-white dark:bg-gray-800 text-gray-900 dark:text-white font-semibold rounded-xl border-2 border-gray-200 dark:border-gray-700 hover:border-emerald-500 dark:hover:border-emerald-500 transition-all duration-300 transform hover:scale-105 shadow-lg">
          <span>Get Notified</span>
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>

</style>

<style>
  @keyframes animate-float {
    0%, 100% {
      transform: translateY(0px) scale(1);
      opacity: 0.5;
    }
    50% {
      transform: translateY(-20px) scale(1.05);
      opacity: 0.8;
    }
  }

  .animate-float {
    animation: animate-float 6s ease-in-out infinite;
  }

  @keyframes animate-float-gentle {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
      opacity: 0.3;
    }
    25% {
      transform: translateY(-10px) translateX(5px);
      opacity: 0.5;
    }
    50% {
      transform: translateY(-15px) translateX(-3px);
      opacity: 0.7;
    }
    75% {
      transform: translateY(-8px) translateX(8px);
      opacity: 0.4;
    }
  }

  .animate-float-gentle {
    animation: animate-float-gentle 4s ease-in-out infinite;
  }

  @keyframes animate-pulse-slow {
    0%, 100% {
      opacity: 0.1;
      transform: scale(1);
    }
    50% {
      opacity: 0.2;
      transform: scale(1.1);
    }
  }

  .animate-pulse-slow {
    animation: animate-pulse-slow 8s ease-in-out infinite;
  }
</style>
