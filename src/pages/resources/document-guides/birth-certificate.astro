---
// Birth Certificate Requirements - Clean URL structure
// /resources/document-guides/birth-certificate

import Layout from '../../../layouts/Layout.astro';

// Get program from URL params
const { searchParams } = Astro.url;
const programParam = searchParams.get('program') || 'general';

// Program-specific information
const programInfo = {
  'express-entry': {
    name: 'Express Entry',
    color: 'from-green-600 via-emerald-700 to-teal-800',
    darkColor: 'from-green-800 via-emerald-900 to-teal-900',
    requirements: 'Required for Express Entry applications',
    specificNotes: [
      'Must be issued by government authority',
      'Include all required information',
      'Translation required if not in English/French'
    ]
  },
  'family-sponsorship': {
    name: 'Family Sponsorship',
    color: 'from-purple-600 via-violet-700 to-indigo-800',
    darkColor: 'from-purple-800 via-violet-900 to-indigo-900',
    requirements: 'Required for family sponsorship applications',
    specificNotes: [
      'Proof of relationship to sponsor',
      'Must be current and valid',
      'Government-issued preferred'
    ]
  },
  'study-permit': {
    name: 'Study Permit',
    color: 'from-blue-600 via-sky-700 to-cyan-800',
    darkColor: 'from-blue-800 via-sky-900 to-cyan-900',
    requirements: 'Required for study permit applications',
    specificNotes: [
      'Proof of age and identity',
      'Required for enrollment',
      'May need additional verification'
    ]
  },
  'work-permit': {
    name: 'Work Permit',
    color: 'from-orange-600 via-amber-700 to-yellow-800',
    darkColor: 'from-orange-800 via-amber-900 to-yellow-900',
    requirements: 'Required for work permit applications',
    specificNotes: [
      'Employment verification',
      'Age and identity proof',
      'May require additional documents'
    ]
  },
  'general': {
    name: 'Immigration Applications',
    color: 'from-blue-600 via-indigo-700 to-purple-800',
    darkColor: 'from-blue-800 via-indigo-900 to-purple-900',
    requirements: 'Required for most immigration applications',
    specificNotes: [
      'Standard requirement across programs',
      'Check specific program requirements',
      'May have program-specific variations'
    ]
  }
};

const currentProgram = programInfo[programParam as keyof typeof programInfo] || programInfo.general;


---

<Layout title="Birth Certificate Requirements | Immigratic" description="Complete guide to birth certificate requirements for Canadian immigration applications. Learn what documents you need, format requirements, and common mistakes to avoid.">
  <!-- Hero Section -->
  <section class={`relative overflow-hidden py-20 lg:py-28 bg-gradient-to-br ${currentProgram.color} dark:${currentProgram.darkColor}`}>
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-opacity-20 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-opacity-20 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb Navigation -->
      <nav class="mb-8">
        <ol class="flex items-center space-x-2 text-sm text-white/80">
          <li><a href="/resources" class="hover:text-white transition-colors">Resources</a></li>
          <li class="text-white/60">/</li>
          <li><a href="/resources/document-guides" class="hover:text-white transition-colors">Document Guides</a></li>
          <li class="text-white/60">/</li>
          <li class="text-white">Birth Certificate</li>
        </ol>
      </nav>

      <!-- Hero Content -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-white/10 backdrop-blur-sm rounded-2xl mb-8">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          Birth Certificate
          <span class="block text-2xl md:text-3xl font-medium text-white/90 mt-2">
            {currentProgram.name}
          </span>
        </h1>
        
        <p class="text-xl text-white/90 max-w-3xl mx-auto mb-8">
          Essential document to verify your identity, date of birth, and parentage for immigration applications.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#requirements" class="inline-flex items-center justify-center px-8 py-4 bg-white text-gray-900 font-semibold rounded-xl hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            View Requirements
          </a>
          <a href="/resources/document-guides" class="inline-flex items-center justify-center px-8 py-4 border-2 border-white/30 text-white font-semibold rounded-xl hover:bg-white/10 transition-all duration-200 backdrop-blur-sm">
            Browse All Documents
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Program-Specific Requirements -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 rounded-3xl p-8 md:p-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
          Program-Specific Requirements
        </h2>
        
        <p class="text-lg text-gray-700 dark:text-gray-300 mb-8">
          {currentProgram.requirements}
        </p>
        
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Key Requirements:</h3>
            <ul class="space-y-3">
              {currentProgram.specificNotes.map((note: string) => (
                <li class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                  <span class="text-gray-700 dark:text-gray-300">{note}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Program Context:</h3>
            <p class="text-gray-700 dark:text-gray-300">
              This guide is tailored for <strong>{currentProgram.name}</strong> applications. Requirements may vary slightly between programs, but the core document needs remain the same.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Document Status -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-16">
        Document Status
      </h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Required -->
        <div class="text-center">
          <div class="w-16 h-16 bg-red-100 dark:bg-red-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Required</h3>
          <p class="text-gray-600 dark:text-gray-400">Must be provided</p>
        </div>
        
        <!-- High Priority -->
        <div class="text-center">
          <div class="w-16 h-16 bg-yellow-100 dark:bg-yellow-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">High Priority</h3>
          <p class="text-gray-600 dark:text-gray-400">Submit early</p>
        </div>
        
        <!-- Time-Sensitive -->
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Time-Sensitive</h3>
          <p class="text-gray-600 dark:text-gray-400">May take weeks</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What You Need to Provide -->
  <section class="py-20" id="requirements">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-16">
        What You Need to Provide
      </h2>
      
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Primary Document -->
        <div>
          <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Primary Document</h3>
          
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
            <h4 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Official Birth Certificate</h4>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              Issued by your country's government or registry
            </p>
            
            <h5 class="font-semibold text-gray-900 dark:text-white mb-3">Must Include:</h5>
            <ul class="space-y-2 text-gray-600 dark:text-gray-400">
              <li class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                <span>Full name (as it appears on passport)</span>
              </li>
              <li class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                <span>Date of birth</span>
              </li>
              <li class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                <span>Place of birth</span>
              </li>
              <li class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                <span>Parents' names</span>
              </li>
              <li class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                <span>Issuing authority</span>
              </li>
            </ul>
          </div>
        </div>
        
        <!-- Alternative Documents -->
        <div>
          <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Alternative Documents</h3>
          
          <div class="space-y-4">
            <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
              <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">National ID Card</h4>
              <p class="text-gray-600 dark:text-gray-400">Include front and back if available</p>
            </div>
            
            <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
              <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Certified Copy</h4>
              <p class="text-gray-600 dark:text-gray-400">If original is not available</p>
            </div>
            
            <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
              <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Translation Required</h4>
              <p class="text-gray-600 dark:text-gray-400">If not in English or French</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Format Requirements -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-16">
        Format Requirements
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- File Type -->
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">File Type</h3>
          <p class="text-gray-600 dark:text-gray-400">PDF format only</p>
        </div>
        
        <!-- File Size -->
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">File Size</h3>
          <p class="text-gray-600 dark:text-gray-400">Maximum 4 MB per file</p>
        </div>
        
        <!-- Quality -->
        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Quality</h3>
          <p class="text-gray-600 dark:text-gray-400">100 DPI minimum, readable text</p>
        </div>
        
        <!-- Color -->
        <div class="text-center">
          <div class="w-16 h-16 bg-orange-100 dark:bg-orange-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Color</h3>
          <p class="text-gray-600 dark:text-gray-400">Color preferred, grayscale OK</p>
        </div>
      </div>
      
      <!-- File Naming Convention -->
      <div class="mt-16 bg-white dark:bg-gray-900 rounded-2xl p-8 shadow-lg border border-gray-200 dark:border-gray-700">
        <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6 text-center">File Naming Convention</h3>
        
        <div class="bg-gray-100 dark:bg-gray-800 rounded-xl p-6 font-mono text-center">
          <code class="text-lg text-gray-900 dark:text-white">
            LastName_FirstName_BirthCert.pdf
          </code>
        </div>
        
        <p class="text-center text-gray-600 dark:text-gray-400 mt-4">
          Example: <code class="bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">Smith_John_BirthCert.pdf</code>
        </p>
      </div>
    </div>
  </section>

  <!-- Important Guidelines -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-16">
        Important Guidelines
      </h2>
      
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- What's Acceptable -->
        <div>
          <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6 flex items-center">
            <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            What's Acceptable
          </h3>
          
          <ul class="space-y-4">
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Official government-issued birth certificates</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Certified copies from issuing authority</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Official translations with original attached</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">National ID cards as supplementary documents</span>
            </li>
          </ul>
        </div>
        
        <!-- What's NOT Acceptable -->
        <div>
          <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6 flex items-center">
            <svg class="w-8 h-8 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            What's NOT Acceptable
          </h3>
          
          <ul class="space-y-4">
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Hospital birth records or certificates</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Unofficial translations or photocopies</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Documents missing required information</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Blurry or unreadable scans</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Common Mistakes to Avoid -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-16">
        Common Mistakes to Avoid
      </h2>
      
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Document Issues -->
        <div>
          <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Document Issues</h3>
          
          <ul class="space-y-4">
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Submitting without translation when not in English/French</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Forgetting to attach original with translation</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Blurry or incomplete scans</span>
            </li>
          </ul>
        </div>
        
        <!-- Process Issues -->
        <div>
          <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Process Issues</h3>
          
          <ul class="space-y-4">
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Waiting too long to obtain documents</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Not verifying document authenticity</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-700 dark:text-gray-300">Missing required information on documents</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Action Steps -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-16">
