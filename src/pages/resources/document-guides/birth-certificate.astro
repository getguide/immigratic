---
// Birth Certificate Requirements - Clean URL structure
// /resources/document-guides/birth-certificate

import Layout from '../../../layouts/Layout.astro';

// Get program from URL params
const { searchParams } = Astro.url;
const programParam = searchParams.get('program') || 'general';

// Program-specific information
const programInfo = {
  'express-entry': {
    name: 'Express Entry',
    color: 'from-green-600 via-emerald-700 to-teal-800',
    darkColor: 'from-green-800 via-emerald-900 to-teal-900',
    requirements: 'Required for Express Entry applications',
    specificNotes: [
      'Must be issued by government authority',
      'Include all required information',
      'Translation required if not in English/French'
    ]
  },
  'family-sponsorship': {
    name: 'Family Sponsorship',
    color: 'from-purple-600 via-violet-700 to-indigo-800',
    darkColor: 'from-purple-800 via-violet-900 to-indigo-900',
    requirements: 'Required for family sponsorship applications',
    specificNotes: [
      'Proof of relationship to sponsor',
      'Must be current and valid',
      'Government-issued preferred'
    ]
  },
  'study-permit': {
    name: 'Study Permit',
    color: 'from-blue-600 via-sky-700 to-cyan-800',
    darkColor: 'from-blue-800 via-sky-900 to-cyan-900',
    requirements: 'Required for study permit applications',
    specificNotes: [
      'Proof of age and identity',
      'Required for enrollment',
      'May need additional verification'
    ]
  },
  'work-permit': {
    name: 'Work Permit',
    color: 'from-orange-600 via-amber-700 to-yellow-800',
    darkColor: 'from-orange-800 via-amber-900 to-yellow-900',
    requirements: 'Required for work permit applications',
    specificNotes: [
      'Employment verification',
      'Age and identity proof',
      'May require additional documents'
    ]
  },
  'general': {
    name: 'Immigration Applications',
    color: 'from-blue-600 via-indigo-700 to-purple-800',
    darkColor: 'from-blue-800 via-indigo-900 to-purple-900',
    requirements: 'Required for most immigration applications',
    specificNotes: [
      'Standard requirement across programs',
      'Check specific program requirements',
      'May have program-specific variations'
    ]
  }
};

const currentProgram = programInfo[programParam as keyof typeof programInfo] || programInfo.general;


---

<Layout title="Birth Certificate Requirements | Immigratic" description="Complete guide to birth certificate requirements for Canadian immigration applications. Learn what documents you need, format requirements, and common mistakes to avoid.">
  <!-- Hero Section -->
  <section class={`relative overflow-hidden py-20 lg:py-28 bg-gradient-to-br ${currentProgram.color} dark:${currentProgram.darkColor}`}>
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-opacity-20 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-opacity-20 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb Navigation -->
      <nav class="mb-8">
        <ol class="flex items-center space-x-2 text-sm text-white/80">
          <li><a href="/resources" class="hover:text-white transition-colors">Resources</a></li>
          <li class="text-white/60">/</li>
          <li><a href="/resources/document-guides" class="hover:text-white transition-colors">Document Guides</a></li>
          <li class="text-white/60">/</li>
          <li class="text-white">Birth Certificate</li>
        </ol>
      </nav>

      <!-- Hero Content -->
      <div class="text-center">
