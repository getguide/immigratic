---
import Layout from '../../../../../layouts/Layout.astro';

// Get program context from URL params or default to general
const url = new URL(Astro.request.url);
const program = url.searchParams.get('program') || 'general';
const category = url.searchParams.get('category') || 'personal-identity';

// Program-specific information
const programInfo = {
  'express-entry': {
    name: 'Express Entry',
    color: 'from-green-600 via-emerald-700 to-teal-800',
    darkColor: 'from-green-800 via-emerald-900 to-teal-900',
    accentColor: 'from-green-200 to-emerald-200',
    requirements: 'Required for all Express Entry applications',
    specificNotes: [
      'Must be valid for entire application process',
      'Include in initial submission',
      'Required for both principal applicant and dependents'
    ]
  },
  'pnp-oinp': {
    name: 'PNP Ontario Immigrant Nominee Program',
    color: 'from-blue-600 via-indigo-700 to-purple-800',
    darkColor: 'from-blue-800 via-indigo-900 to-purple-900',
    accentColor: 'from-blue-200 to-indigo-200',
    requirements: 'Required for OINP nomination',
    specificNotes: [
      'Must be valid at time of nomination',
      'Include in OINP application package',
      'Required for both principal applicant and dependents'
    ]
  },
  'family-sponsorship': {
    name: 'Family Sponsorship',
    color: 'from-pink-600 via-rose-700 to-red-800',
    darkColor: 'from-pink-800 via-rose-900 to-red-900',
    accentColor: 'from-pink-200 to-rose-200',
    requirements: 'Required for family class applications',
    specificNotes: [
      'Must establish relationship to sponsor',
      'Include in sponsorship application',
      'Required for both sponsor and sponsored person'
    ]
  },
  'general': {
    name: 'Immigration Applications',
    color: 'from-gray-600 via-slate-700 to-zinc-800',
    darkColor: 'from-gray-800 via-slate-900 to-zinc-900',
    accentColor: 'from-gray-200 to-slate-200',
    requirements: 'Required for most immigration applications',
    specificNotes: [
      'Standard requirement across programs',
      'Check specific program requirements',
      'May have program-specific variations'
    ]
  }
};

const currentProgram = programInfo[program as keyof typeof programInfo] || programInfo.general;
---

