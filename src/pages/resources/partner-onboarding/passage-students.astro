<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Intersection Observer for stage sections
    const stageSections = document.querySelectorAll('.stage-section');
    const stageObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          
          // Animate milestones within this stage
          const milestones = entry.target.querySelectorAll('.milestone-card');
          milestones.forEach((milestone, index) => {
            setTimeout(() => {
              milestone.classList.add('visible');
            }, index * 200);
          });
        }
      });
    }, {
      threshold: 0.3,
      rootMargin: '0px 0px -100px 0px'
    });

    stageSections.forEach(section => {
      stageObserver.observe(section);
    });

    // Progress bar and stage indicator updates
    const progressFill = document.querySelector('.progress-fill');
    const stageIndicators = document.querySelectorAll('.stage-indicator');
    
    if (progressFill && stageIndicators.length > 0) {
      const progressObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const stage = parseInt(entry.target.dataset.stage);
            const progressPercentage = (stage / 3) * 100;
            
            // Update progress bar
            progressFill.style.height = progressPercentage + '%';
            
            // Update stage indicators
            stageIndicators.forEach((indicator, index) => {
              if (index < stage) {
                indicator.classList.add('active');
              } else {
                indicator.classList.remove('active');
              }
            });
          }
        });
      }, {
        threshold: 0.5
      });
      
      stageSections.forEach(section => {
        progressObserver.observe(section);
      });
    }
  });
</script>
