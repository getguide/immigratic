<style>
  @keyframes animate-pulse-slow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }
  
  @keyframes animate-float-gentle {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-pulse-slow {
    animation: animate-pulse-slow 4s ease-in-out infinite;
  }
  
  .animate-float-gentle {
    animation: animate-float-gentle 3s ease-in-out infinite;
  }

  /* Stage Sections */
  .stage-section {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }

  .stage-section.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stage Headers */
  .stage-header {
    display: flex;
    align-items: center;
    margin-bottom: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, #f8fafc, #e2e8f0);
    border-radius: 1.5rem;
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .stage-header:hover {
    border-color: #10b981;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .dark .stage-header {
    background: linear-gradient(135deg, #1f2937, #374151);
  }

  .stage-number {
    width: 4rem;
    height: 4rem;
    background: linear-gradient(135deg, #10b981, #059669);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
    margin-right: 2rem;
    box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
  }

  .stage-content h3 {
    font-size: 1.875rem;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .stage-content p {
    font-size: 1.125rem;
    color: #6b7280;
  }

  .dark .stage-content h3 {
    color: #f9fafb;
  }

  .dark .stage-content p {
    color: #d1d5db;
  }

  /* Milestones Container */
  .milestones-container {
    display: grid;
    gap: 1.5rem;
    margin-left: 2rem;
  }

  /* Milestone Cards */
  .milestone-card {
    display: flex;
    align-items: flex-start;
    padding: 1.5rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 2px solid transparent;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateX(-20px);
  }

  .milestone-card.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .milestone-card:hover {
    border-color: #10b981;
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .dark .milestone-card {
    background: #1f2937;
  }

  .milestone-icon {
    width: 3rem;
    height: 3rem;
    background: #f3f4f6;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1.5rem;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .milestone-card:hover .milestone-icon {
    transform: scale(1.1);
  }

  .dark .milestone-icon {
    background: #374151;
  }

  .milestone-content h4 {
    font-size: 1.25rem;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .milestone-content p {
    color: #6b7280;
    line-height: 1.6;
  }

  .dark .milestone-content h4 {
    color: #f9fafb;
  }

  .dark .milestone-content p {
    color: #d1d5db;
  }

  /* Progress Bar Styling */
  .progress-fill {
    transition: height 1s ease-out;
  }

  .stage-indicator {
    transition: all 0.5s ease;
  }

  .stage-indicator.active {
    background: #10b981;
    transform: scale(1.2);
    box-shadow: 0 0 20px rgba(16, 185, 129, 0.5);
  }

  /* Info Cards */
  .info-card {
    background: white;
    border-radius: 1.5rem;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e7eb;
    transition: all 0.3s ease;
  }

  .info-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .dark .info-card {
    background: #1f2937;
    border-color: #374151;
  }

  .info-icon {
    width: 3rem;
    height: 3rem;
    background: #f3f4f6;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .dark .info-icon {
    background: #374151;
  }

  .info-title {
    font-size: 1.125rem;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 1rem;
