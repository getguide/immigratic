    const tuitionFee = parseInt(document.getElementById('tuition-fee').value);
    const increasePercentage = parseInt(document.getElementById('increase-percentage').value);
    
    const additionalStudents = Math.round(currentStudents * (increasePercentage / 100));
    const additionalRevenue = additionalStudents * tuitionFee;
    const totalInvestment = additionalStudents * 750; // Immigratic fee per case
    const roi = Math.round((additionalRevenue / totalInvestment) * 100);
    
    document.getElementById('additional-students').textContent = '+' + additionalStudents + ' students';
    document.getElementById('additional-revenue').textContent = '$' + additionalRevenue.toLocaleString();
    document.getElementById('roi-percentage').textContent = roi + '%';
  }
  
  // Immigration Agencies ROI Calculator
  function updateCasesValue(value) {
    document.getElementById('cases-value').textContent = value + ' cases';
    calculateAgencyROI();
  }
  
  function updateCurrentFeeValue(value) {
    document.getElementById('current-fee-value').textContent = '$' + parseInt(value).toLocaleString();
    calculateAgencyROI();
  }
  
  function updateCurrentSuccessValue(value) {
    document.getElementById('current-success-value').textContent = value + '%';
    calculateAgencyROI();
  }
  
  function calculateAgencyROI() {
