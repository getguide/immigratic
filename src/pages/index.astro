---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Canada's Most Innovative Immigration Platform">
  <!-- Hero Section -->
  <section class="relative overflow-hidden gradient-hero text-white">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-8">
          <h1 class="text-responsive-xl font-bold leading-tight">
            Your Journey to 
            <span class="text-gradient bg-gradient-to-r from-yellow-300 to-orange-300 bg-clip-text text-transparent">
              Canada
            </span> 
            Starts Here
          </h1>
          <p class="text-responsive text-gray-100 leading-relaxed">
            Canada's most innovative immigration platform. Get expert guidance, AI-powered tools, and personalized support for your visa, work permit, and permanent residency applications.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/visa-checker" class="btn-primary text-center">
              Check Your Eligibility
            </a>
            <a href="/consultation" class="btn-outline border-white text-white hover:bg-white hover:text-primary-600 text-center">
              Free Consultation
            </a>
          </div>
          <div class="flex items-center space-x-6 text-sm">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span>AI-Powered Tools</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span>Expert Guidance</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span>95% Success Rate</span>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="relative z-10 bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                <span class="text-sm">AI Visa Checker</span>
              </div>
              <div class="space-y-3">
                <div class="bg-white/20 rounded-lg p-4">
                  <div class="flex items-center justify-between">
                    <span class="text-sm">Express Entry Score</span>
                    <span class="font-semibold">485</span>
                  </div>
                  <div class="w-full bg-white/30 rounded-full h-2 mt-2">
                    <div class="bg-green-400 h-2 rounded-full" style="width: 75%"></div>
                  </div>
                </div>
                <div class="bg-white/20 rounded-lg p-4">
                  <div class="flex items-center justify-between">
                    <span class="text-sm">Eligibility Status</span>
                    <span class="text-green-400 font-semibold">Eligible</span>
                  </div>
                </div>
                <div class="bg-white/20 rounded-lg p-4">
                  <div class="flex items-center justify-between">
                    <span class="text-sm">Recommended Path</span>
                    <span class="font-semibold">Federal Skilled Worker</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full opacity-20 animate-float"></div>
          <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full opacity-20 animate-float" style="animation-delay: 1s;"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800 transition-colors duration-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-responsive-lg font-bold text-gray-900 dark:text-white mb-4">
          Comprehensive Immigration Services
        </h2>
        <p class="text-responsive text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          From Express Entry to family sponsorship, we provide expert guidance for every immigration pathway to Canada.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Express Entry -->
        <div class="card-hover group">
          <div class="w-12 h-12 gradient-primary rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Express Entry</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">Fast-track your permanent residency with our comprehensive Express Entry guidance and CRS optimization strategies.</p>
          <a href="/services/express-entry" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">Learn More →</a>
        </div>

        <!-- Family Sponsorship -->
        <div class="card-hover group">
          <div class="w-12 h-12 bg-gradient-to-br from-secondary-600 to-secondary-700 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Family Sponsorship</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">Reunite with your loved ones through family sponsorship programs with our expert guidance and support.</p>
          <a href="/services/family-sponsorship" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">Learn More →</a>
        </div>

        <!-- Work Permits -->
        <div class="card-hover group">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Work Permits</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">Navigate work permit applications with confidence. From LMIA to Global Talent Stream, we've got you covered.</p>
          <a href="/services/work-permits" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">Learn More →</a>
        </div>

        <!-- Study Permits -->
        <div class="card-hover group">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-600 to-primary-800 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Study Permits</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">Pursue your education in Canada with our comprehensive study permit application support and guidance.</p>
          <a href="/services/study-permits" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">Learn More →</a>
        </div>

        <!-- Business Immigration -->
        <div class="card-hover group">
          <div class="w-12 h-12 bg-gradient-to-br from-secondary-500 to-secondary-700 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Business Immigration</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">Start your business in Canada with our expert guidance on startup visas and business immigration programs.</p>
          <a href="/services/business-immigration" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">Learn More →</a>
        </div>

        <!-- AI Tools -->
        <div class="card-hover group">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-700 to-primary-900 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">AI-Powered Tools</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">Use our advanced AI tools for eligibility assessment, document preparation, and application tracking.</p>
          <a href="/tools" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">Explore Tools →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white dark:bg-gray-900 transition-colors duration-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-8">
          <h2 class="text-responsive-lg font-bold text-gray-900 dark:text-white">
            Why Choose Immigratic?
          </h2>
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">AI-Powered Assessment</h3>
                <p class="text-gray-600 dark:text-gray-300">Our advanced AI analyzes your profile and provides personalized recommendations for the best immigration pathway.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Expert Guidance</h3>
                <p class="text-gray-600 dark:text-gray-300">Get personalized support from certified immigration consultants with years of experience.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Real-time Tracking</h3>
                <p class="text-gray-600 dark:text-gray-300">Track your application progress in real-time with our advanced dashboard and notifications.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">95% Success Rate</h3>
                <p class="text-gray-600 dark:text-gray-300">Join thousands of successful applicants who have achieved their Canadian dream with our guidance.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="relative">
          <div class="bg-gradient-to-br from-primary-50 to-primary-100 dark:from-primary-900/20 dark:to-primary-800/20 rounded-2xl p-8 border border-primary-200 dark:border-primary-700">
            <div class="space-y-6">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-primary-400 rounded-full"></div>
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Application Status</span>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Document Review</span>
                  <span class="text-green-600 dark:text-green-400 text-sm font-medium">✓ Complete</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Application Submitted</span>
                  <span class="text-green-600 dark:text-green-400 text-sm font-medium">✓ Complete</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Processing</span>
                  <span class="text-primary-600 dark:text-primary-400 text-sm font-medium">In Progress</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Decision</span>
                  <span class="text-gray-400 dark:text-gray-500 text-sm">Pending</span>
                </div>
              </div>
              
              <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-green-500 to-primary-500 h-2 rounded-full" style="width: 60%"></div>
              </div>
              
              <div class="text-center">
                <p class="text-sm text-gray-600 dark:text-gray-400">Estimated completion: 3-4 months</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 gradient-primary text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-responsive-lg font-bold mb-4">
        Ready to Start Your Canadian Journey?
      </h2>
      <p class="text-responsive text-primary-100 mb-8 max-w-2xl mx-auto">
        Join thousands of successful applicants who have achieved their Canadian dream with our innovative platform and expert guidance.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/visa-checker" class="bg-white text-primary-600 px-8 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors">
          Check Your Eligibility
        </a>
        <a href="/consultation" class="border-2 border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-primary-600 transition-colors">
          Book Free Consultation
        </a>
      </div>
    </div>
  </section>
</Layout>
