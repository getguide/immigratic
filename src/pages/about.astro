      if (e.target === this) {
        closeSaulModal();
      }
    });

    // Interactive Switch Functionality
    function initSwitch() {
      const switchTrack = document.getElementById('switch-track');
      const switchButton = document.getElementById('switch-button');
      const traditionalContent = document.getElementById('traditional-content');
      const modernContent = document.getElementById('modern-content');
      const traditionalLabel = document.getElementById('traditional-label');
      const modernLabel = document.getElementById('modern-label');
      
      let isModern = false;

      function toggleSwitch() {
        isModern = !isModern;
        
        if (isModern) {
          // Switch to Modern Legal-Tech
          switchButton.style.transform = 'translateX(2.5rem)';
          switchTrack.style.backgroundColor = '#10b981'; // green-500
          traditionalContent.classList.add('hidden');
          modernContent.classList.remove('hidden');
          traditionalLabel.style.opacity = '0.5';
          modernLabel.style.opacity = '1';
        } else {
          // Switch to Traditional Legal
          switchButton.style.transform = 'translateX(0)';
          switchTrack.style.backgroundColor = '#6b7280'; // gray-500
          traditionalContent.classList.remove('hidden');
          modernContent.classList.add('hidden');
          traditionalLabel.style.opacity = '1';
          modernLabel.style.opacity = '0.5';
        }
      }

      // Add click event to switch track
      switchTrack.addEventListener('click', toggleSwitch);
      
      // Add click event to switch button
      switchButton.addEventListener('click', toggleSwitch);
    }

    // Initialize the switch
    initSwitch();
  });
