---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
---

<Layout title="About Immigratic | Leading Canadian Immigration Platform | CICC Regulated">
  <Breadcrumbs 
    items={[
      { text: "Home", href: "/" },
      { text: "About", current: true }
    ]}
  />
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-blue-900 via-purple-900 to-green-900">
    <!-- Animated Background -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-20 w-96 h-96 bg-blue-500/30 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-purple-500/30 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-green-500/20 rounded-full blur-2xl animate-float-gentle"></div>
    </div>

    <!-- Floating Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-8 h-8 text-blue-400/40 animate-float-gentle">
        <svg fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      </div>
      <div class="absolute top-3/4 right-1/4 w-6 h-6 text-purple-400/40 animate-float-gentle" style="animation-delay: 1s;">
        <svg fill="currentColor" viewBox="0 0 24 24">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="absolute top-1/2 left-3/4 w-5 h-5 text-green-400/40 animate-float-gentle" style="animation-delay: 2s;">
        <svg fill="currentColor" viewBox="0 0 24 24">
          <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      </div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-left">
          <div class="inline-flex items-center px-4 py-2 bg-blue-500/20 rounded-full text-blue-300 text-sm font-medium mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            About Immigratic
          </div>

          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white mb-6 sm:mb-8 opacity-0 animate-fade-in-up leading-tight px-4 sm:px-0" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
            Leading Canadian
            <span class="block mt-2 sm:mt-4 bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 bg-clip-text text-transparent animate-gradient-flow">
              Immigration Platform
            </span>
          </h1>
          
          <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-8 sm:mb-12 opacity-0 animate-fade-in-up leading-relaxed px-4 sm:px-0" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
            CICC regulated, data-driven, and committed to making immigration services affordable, transparent, and accessible to everyone.
          </p>

          <!-- Key Stats -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 1.0s; animation-fill-mode: forwards;">
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-green-400 mb-2 counter-animate" data-target="100">0</div>
              <div class="text-gray-300 text-sm">% CICC Compliant</div>
            </div>
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-blue-400 mb-2 counter-animate" data-target="50">0</div>
              <div class="text-gray-300 text-sm">% Cost Reduction</div>
            </div>
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-purple-400 mb-2 counter-animate" data-target="99">0</div>
              <div class="text-gray-300 text-sm">% Success Rate</div>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 opacity-0 animate-fade-in-up" style="animation-delay: 1.4s; animation-fill-mode: forwards;">
            <a href="/solutions" class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-full hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
              <span>Explore Solutions</span>
              <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            
            <a href="#our-story" class="group inline-flex items-center px-8 py-4 bg-transparent border-2 border-white/30 text-white font-semibold rounded-full hover:bg-white/10 hover:border-white/50 transition-all duration-300 transform hover:scale-105">
              <span>Our Story</span>
              <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Right Visual -->
        <div class="relative opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
          <!-- Main Visual -->
          <div class="relative bg-white/10 backdrop-blur-md rounded-3xl p-8 border border-white/20 shadow-2xl">
            <!-- CICC Badge -->
            <div class="text-center mb-6">
              <a href="https://register.college-ic.ca/Public-Register-EN/Licensee/Profile.aspx?ID=18096&b9100e1006f6=2#b9100e1006f6" target="_blank" rel="noopener noreferrer" class="group inline-flex items-center px-4 py-2 bg-green-500/20 rounded-full text-green-300 text-sm font-medium hover:bg-green-500/30 hover:text-green-200 transition-all duration-300 animate-cicc-blink cursor-pointer">
                <svg class="w-4 h-4 mr-2 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                CICC Regulated
                <svg class="w-3 h-3 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
            
            <!-- Platform Stats -->
            <div class="space-y-4">
              <div class="bg-white/10 rounded-xl p-4 text-center">
                <div class="text-2xl font-bold text-white mb-2">Ottawa, ON</div>
                <div class="text-gray-300 text-sm">Headquarters</div>
              </div>
              <div class="bg-white/10 rounded-xl p-4 text-center">
                <div class="text-2xl font-bold text-white mb-2">Data-Driven</div>
                <div class="text-gray-300 text-sm">AI-Powered Platform</div>
              </div>
              <div class="bg-white/10 rounded-xl p-4 text-center">
                <div class="text-2xl font-bold text-white mb-2">Premium Partner</div>
                <div class="text-gray-300 text-sm">Lexpoint.io</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation Bar -->
  <nav class="sticky top-0 z-50 bg-white/95 dark:bg-gray-900/95 backdrop-blur-xl border-b border-gray-200 dark:border-gray-700 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-center space-x-8 py-4">
        <a href="#our-story" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300">Our Story</a>
        <a href="#our-mission" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300">Our Mission</a>
        <a href="#our-values" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300">Our Values</a>
        <a href="#get-started" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300">Get Started</a>
      </div>
    </div>
  </nav>

  <!-- Our Story Section -->
  <section id="our-story" class="py-24 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
          Our Story:
          <span class="block bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mt-2">
            From Vision to Reality
          </span>
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          Founded in the heart of Canada's capital, Immigratic emerged from a simple yet powerful vision: to democratize immigration services and make them accessible to everyone.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="space-y-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Ottawa Headquarters</h3>
            <p class="text-gray-600 dark:text-gray-300">Based in Canada's capital, we're at the center of immigration policy and innovation, ensuring we stay ahead of regulatory changes and industry developments.</p>
          </div>

          <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">CICC Regulated</h3>
            <p class="text-gray-600 dark:text-gray-300">As a regulated member of the College of Immigration and Citizenship Consultants, we maintain the highest standards of professionalism and compliance in all our services.</p>
          </div>
        </div>

        <!-- Right Visual -->
        <div class="relative opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
          <div class="bg-gradient-to-br from-blue-600 to-purple-600 rounded-3xl p-8 text-white text-center">
            <div class="text-6xl mb-4">üèõÔ∏è</div>
            <h3 class="text-2xl font-bold mb-4">Canada's Capital</h3>
            <p class="text-blue-100">Located in Ottawa, Ontario, we're strategically positioned to serve clients across Canada and around the world with the highest standards of immigration expertise.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Immigratic by Numbers Stats Bar -->
  <section class="py-16 bg-gradient-to-br from-gray-50 to-blue-50 dark:from-gray-800 dark:to-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
          üìä Immigratic by Numbers
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          Real impact, real results, real people
        </p>
      </div>
      
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Assessments Completed -->
        <div class="text-center group opacity-0 animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
          <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <div class="text-3xl md:text-4xl font-bold text-blue-600 dark:text-blue-400 mb-2">
            <span class="counter-animate" data-target="5000">0</span>+
          </div>
          <div class="text-gray-600 dark:text-gray-300 font-medium">Assessments Completed</div>
        </div>

        <!-- Consultations Delivered -->
        <div class="text-center group opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
          <div class="w-20 h-20 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <div class="text-3xl md:text-4xl font-bold text-purple-600 dark:text-purple-400 mb-2">
            <span class="counter-animate" data-target="3000">0</span>+
          </div>
          <div class="text-gray-600 dark:text-gray-300 font-medium">Consultations Delivered</div>
        </div>

        <!-- Cases Handled -->
        <div class="text-center group opacity-0 animate-fade-in-up" style="animation-delay: 1.0s; animation-fill-mode: forwards;">
          <div class="w-20 h-20 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="text-3xl md:text-4xl font-bold text-green-600 dark:text-green-400 mb-2">
            <span class="counter-animate" data-target="500">0</span>+
          </div>
          <div class="text-gray-600 dark:text-gray-300 font-medium">Cases Handled</div>
        </div>

        <!-- Countries Served -->
        <div class="text-center group opacity-0 animate-fade-in-up" style="animation-delay: 1.2s; animation-fill-mode: forwards;">
          <div class="w-20 h-20 bg-gradient-to-br from-orange-500 to-orange-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="text-3xl md:text-4xl font-bold text-orange-600 dark:text-orange-400 mb-2">
            <span class="counter-animate" data-target="35">0</span>+
          </div>
          <div class="text-gray-600 dark:text-gray-300 font-medium">Countries Served</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Mission Section -->
  <section id="our-mission" class="py-24 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Our Mission:
          <span class="block bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent mt-2">
            Democratizing Immigration
          </span>
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto">
          We believe that quality immigration services should be accessible to everyone, regardless of their background or financial means.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center group">
          <div class="w-20 h-20 bg-gradient-to-br from-green-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Affordable</h3>
          <p class="text-gray-600 dark:text-gray-300">Reducing costs by up to 50% while maintaining the highest quality standards and regulatory compliance.</p>
        </div>

        <div class="text-center group">
          <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Transparent</h3>
          <p class="text-gray-600 dark:text-gray-300">Clear pricing, real-time updates, and complete visibility into the immigration process from start to finish.</p>
        </div>

        <div class="text-center group">
          <div class="w-20 h-20 bg-gradient-to-br from-purple-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Accessible</h3>
          <p class="text-gray-600 dark:text-gray-300">Available to everyone through our innovative platform, breaking down barriers to quality immigration services.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Values Section -->
  <section id="our-values" class="py-24 bg-gradient-to-br from-gray-50 to-blue-50 dark:from-gray-800 dark:to-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Our Values:
          <span class="block bg-gradient-to-r from-blue-600 to-green-600 bg-clip-text text-transparent mt-2">
            What Drives Us Forward
          </span>
        </h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Data-Driven Innovation -->
        <div class="group">
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 group-hover:border-blue-400/50">
