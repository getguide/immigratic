---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
---

<Layout title="About Immigratic | Leading Canadian Immigration Platform | CICC Regulated">
  <Breadcrumbs 
    items={[
      { text: "Home", href: "/" },
      { text: "About", current: true }
    ]}
  />
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-blue-900 via-purple-900 to-green-900">
    <!-- Animated Background -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-20 w-96 h-96 bg-blue-500/30 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-purple-500/30 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-green-500/20 rounded-full blur-2xl animate-float-gentle"></div>
    </div>

    <!-- Floating Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-8 h-8 text-blue-400/40 animate-float-gentle">
        <svg fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      </div>
      <div class="absolute top-3/4 right-1/4 w-6 h-6 text-purple-400/40 animate-float-gentle" style="animation-delay: 1s;">
        <svg fill="currentColor" viewBox="0 0 24 24">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="absolute top-1/2 left-3/4 w-5 h-5 text-green-400/40 animate-float-gentle" style="animation-delay: 2s;">
        <svg fill="currentColor" viewBox="0 0 24 24">
          <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      </div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-left">
          <div class="inline-flex items-center px-4 py-2 bg-blue-500/20 rounded-full text-blue-300 text-sm font-medium mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            About Immigratic
          </div>

          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white mb-6 sm:mb-8 opacity-0 animate-fade-in-up leading-tight px-4 sm:px-0" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
            Building Canada's
            <span class="block mt-2 sm:mt-4 bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 bg-clip-text text-transparent animate-gradient-flow">
              Legal-Tech Infrastructure
            </span>
          </h1>
          
          <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-8 sm:mb-12 opacity-0 animate-fade-in-up leading-relaxed px-4 sm:px-0" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
            From individual immigration to enterprise compliance - we're digitizing Canada's legal sector through innovative platforms and AI-powered solutions.
          </p>

          <!-- Key Stats -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 1.0s; animation-fill-mode: forwards;">
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-green-400 mb-2">
                <span class="counter-animate" data-target="5000">0</span>+
              </div>
              <div class="text-gray-300 text-sm">Users Served</div>
            </div>
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-blue-400 mb-2">
                <span class="counter-animate" data-target="1000">0</span>+
              </div>
              <div class="text-gray-300 text-sm">System Fields</div>
            </div>
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-purple-400 mb-2">
                <span class="counter-animate" data-target="4">0</span>+
              </div>
              <div class="text-gray-300 text-sm">Innovation Platforms</div>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 opacity-0 animate-fade-in-up" style="animation-delay: 1.4s; animation-fill-mode: forwards;">
            <a href="/solutions" class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-full hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
              <span>Explore Our Ecosystem</span>
              <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            
            <a href="#the-vision" class="group inline-flex items-center px-8 py-4 bg-transparent border-2 border-white/30 text-white font-semibold rounded-full hover:bg-white/10 hover:border-white/50 transition-all duration-300 transform hover:scale-105">
              <span>Our Vision</span>
              <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Right Visual -->
        <div class="relative opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
          <!-- Main Visual -->
          <div class="relative bg-white/10 backdrop-blur-md rounded-3xl p-8 border border-white/20 shadow-2xl">
            <!-- CICC Badge -->
            <div class="text-center mb-6">
              <a href="https://register.college-ic.ca/Public-Register-EN/Licensee/Profile.aspx?ID=18096&b9100e1006f6=2#b9100e1006f6" target="_blank" rel="noopener noreferrer" class="group inline-flex items-center px-4 py-2 bg-green-500/20 rounded-full text-green-300 text-sm font-medium hover:bg-green-500/30 hover:text-green-200 transition-all duration-300 animate-cicc-blink cursor-pointer">
                <svg class="w-4 h-4 mr-2 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                CICC Regulated
                <svg class="w-3 h-3 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
            
            <!-- Platform Stats -->
            <div class="space-y-4">
              <a href="https://lexpoint.io" target="_blank" rel="noopener noreferrer" class="group bg-white/10 rounded-xl p-4 text-center hover:bg-white/20 hover:scale-105 transition-all duration-300 cursor-pointer border border-white/20 hover:border-white/40 hover:shadow-xl block">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                </div>
                <div class="text-xl font-bold text-white mb-2 group-hover:text-blue-200 transition-colors duration-300">Lexpoint.io</div>
                <div class="text-gray-300 text-sm group-hover:text-green-100 transition-colors duration-300">Legal-Tech Infrastructure</div>
                <!-- Blinking Arrow Icon -->
                <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 mt-2">
                  <svg class="w-5 h-5 text-blue-300 mx-auto animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </a>
              
              <a href="https://immicare.ca" target="_blank" rel="noopener noreferrer" class="group bg-white/10 rounded-xl p-4 text-center hover:bg-white/20 hover:scale-105 transition-all duration-300 cursor-pointer border border-white/20 hover:border-white/40 hover:shadow-xl block">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="text-xl font-bold text-white mb-2 group-hover:text-green-200 transition-colors duration-300">ImmiCare</div>
                <div class="text-gray-300 text-sm group-hover:text-green-100 transition-colors duration-300">Immigration Compliance</div>
                <!-- Blinking Arrow Icon -->
                <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 mt-2">
                  <svg class="w-5 h-5 text-green-300 mx-auto animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </a>
              
              <a href="https://immicoach.ca" target="_blank" rel="noopener noreferrer" class="group bg-white/10 rounded-xl p-4 text-center hover:bg-white/20 hover:scale-105 transition-all duration-300 cursor-pointer border border-white/20 hover:border-white/40 hover:shadow-xl block">
                <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-600 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                </div>
                <div class="text-xl font-bold text-white mb-2 group-hover:text-purple-200 transition-colors duration-300">ImmiCoach</div>
                <div class="text-gray-300 text-sm group-hover:text-purple-100 transition-colors duration-300">Do It Yourself</div>
                <!-- Blinking Arrow Icon -->
                <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 mt-2">
                  <svg class="w-5 h-5 text-purple-300 mx-auto animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </a>
              
              <a href="https://immiwatch.ca" target="_blank" rel="noopener noreferrer" class="group bg-white/10 rounded-xl p-4 text-center hover:bg-white/20 hover:scale-105 transition-all duration-300 cursor-pointer border border-white/20 hover:border-white/40 hover:shadow-xl block">
                <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-red-600 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                </div>
                <div class="text-xl font-bold text-white mb-2 group-hover:text-orange-200 transition-colors duration-300">ImmiWatch</div>
                <div class="text-gray-300 text-sm group-hover:text-orange-100 transition-colors duration-300">Real-Time Data & Analytics</div>
                <!-- Blinking Arrow Icon -->
                <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 mt-2">
                  <svg class="w-5 h-6 text-orange-300 mx-auto animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation Bar -->
  <nav class="sticky top-0 z-50 bg-white/95 dark:bg-gray-900/95 backdrop-blur-xl border-b border-gray-200 dark:border-gray-700 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-center space-x-4 sm:space-x-6 lg:space-x-8 py-4">
        <a href="#the-vision" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300 text-sm lg:text-base">Vision</a>
        <a href="#our-mission" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300 text-sm lg:text-base">Mission</a>
        <a href="#our-story" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300 text-sm lg:text-base">Journey</a>
        <a href="#get-started" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300 text-sm lg:text-base">Get Started</a>
      </div>
    </div>
  </nav>

  <!-- The Vision Section -->
  <section id="the-vision" class="py-24 bg-gradient-to-br from-gray-50 to-blue-50 dark:from-gray-800 dark:to-gray-900 overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-20 left-20 w-32 h-32 bg-blue-400/20 rounded-full blur-xl animate-float-gentle"></div>
      <div class="absolute bottom-20 right-20 w-40 h-40 bg-purple-400/20 rounded-full blur-xl animate-float-gentle" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-24 h-24 bg-green-400/20 rounded-full blur-lg animate-pulse-slow"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
          The Vision:
          <span class="block bg-gradient-to-r from-blue-600 via-purple-600 to-green-600 bg-clip-text text-transparent mt-2 animate-gradient-flow">
            Transforming Legal Services
          </span>
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          Building the digital foundation that will modernize Canada's legal infrastructure
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left: Vision Points -->
        <div class="space-y-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
          <!-- Point 1: Problem -->
          <div class="group flex items-start space-x-4 p-6 bg-white/80 dark:bg-gray-800/80 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-2xl hover:scale-105 transition-all duration-500 backdrop-blur-sm">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-orange-600 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors duration-300">The Problem</h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">Legal services stuck in the past, expensive and inaccessible</p>
            </div>
          </div>

          <!-- Point 2: Solution -->
          <div class="group flex items-start space-x-4 p-6 bg-white/80 dark:bg-gray-800/80 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-2xl hover:scale-105 transition-all duration-500 backdrop-blur-sm">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">Our Solution</h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">Digital infrastructure that modernizes legal services</p>
            </div>
          </div>

          <!-- Point 3: Impact -->
          <div class="group flex items-start space-x-4 p-6 bg-white/80 dark:bg-gray-800/80 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-2xl hover:scale-105 transition-all duration-500 backdrop-blur-sm">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-green-600 dark:group-hover:text-green-400 transition-colors duration-300">The Impact</h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">Democratizing access, reducing costs by 50%</p>
            </div>
          </div>
        </div>

        <!-- Right: Interactive Switch -->
        <div class="relative opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
          <!-- Main Visual Container -->
          <div class="relative bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-3xl p-8 shadow-2xl border border-gray-200 dark:border-gray-700">
            <!-- Interactive Switch Header -->
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Legal Services Transformation</h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm">Toggle to see the difference</p>
            </div>

            <!-- Interactive Switch -->
            <div class="flex items-center justify-center mb-8">
              <div class="relative">
                <!-- Switch Track -->
                <div class="w-20 h-10 bg-gray-300 dark:bg-gray-600 rounded-full shadow-inner transition-colors duration-500" id="switch-track">
                  <!-- Switch Button -->
                  <div class="absolute top-1 left-1 w-8 h-8 bg-white dark:bg-gray-300 rounded-full shadow-lg transition-all duration-500 transform" id="switch-button"></div>
                </div>
              </div>
            </div>

            <!-- Labels -->
            <div class="flex justify-between items-center mb-6">
              <span class="text-sm font-medium text-red-600 dark:text-red-400 transition-colors duration-500" id="traditional-label">Traditional Legal</span>
              <span class="text-sm font-medium text-green-600 dark:text-green-400 transition-colors duration-500 opacity-50" id="modern-label">Modern Legal-Tech</span>
            </div>

            <!-- Content Display -->
            <div class="space-y-4">
              <!-- Traditional Legal Content (Default) -->
              <div id="traditional-content" class="space-y-3">
                <div class="flex items-center space-x-3 p-3 bg-red-50 dark:bg-red-900/20 rounded-lg border border-red-200 dark:border-red-800">
                  <svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                  <span class="text-sm text-red-700 dark:text-red-300">Expensive - $500+ per consultation</span>
                </div>
                <div class="flex items-center space-x-3 p-3 bg-red-50 dark:bg-red-900/20 rounded-lg border border-red-200 dark:border-red-800">
                  <svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                  <span class="text-sm text-red-700 dark:text-red-300">Slow - Weeks to months</span>
                </div>
                <div class="flex items-center space-x-3 p-3 bg-red-50 dark:bg-red-900/20 rounded-lg border border-red-200 dark:border-red-800">
                  <svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                  <span class="text-sm text-red-700 dark:text-red-300">Inaccessible - Limited availability</span>
                </div>
              </div>

