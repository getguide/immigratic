              <div class="bg-orange-600 h-1 rounded-full animate-pulse" style="width: 88%"></div>
            </div>
          </div>
        </div>
        
        <!-- 10x Faster -->
        <div class="feature-card bg-gradient-to-br from-red-50 to-red-100 dark:from-red-900/20 dark:to-red-800/20 rounded-3xl p-8 border border-red-200 dark:border-red-700 cursor-pointer transform transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:-translate-y-2 group" data-feature="faster-assessment">
