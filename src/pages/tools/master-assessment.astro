<script>
  // Scenario Analyzer JavaScript
  document.addEventListener('DOMContentLoaded', function() {
    // Initial profile data
    let currentProfile = {
      clb: 7,
      experience: 0,
      noc: 'regular'
    };

    // Base scores for different programs
    const baseScores = {
      'cec': { score: 432, eligible: false, threshold: 470, requiresExperience: true },
      'oinp': { score: 58, eligible: false, threshold: 65, requiresExperience: false },
      'bcpnp': { score: 98, eligible: false, threshold: 110, requiresExperience: false },
      'aaip': { score: 320, eligible: false, threshold: 350, requiresExperience: false }
    };

    // Score multipliers for different factors
    const scoreMultipliers = {
      clb: { 7: 0, 8: 25, 9: 50 },
      experience: { 0: 0, 1: 50 },
      noc: { 'regular': 0, 'trade': 50 }
    };

    // Initialize the scenario analyzer
    function initScenarioAnalyzer() {
      updateResults();
      setupEventListeners();
    }

    // Setup event listeners for scenario buttons
    function setupEventListeners() {
      // CLB level buttons
      document.querySelectorAll('[data-factor="clb"]').forEach(btn => {
        btn.addEventListener('click', function() {
          document.querySelectorAll('[data-factor="clb"]').forEach(b => b.classList.remove('active'));
          this.classList.add('active');
          currentProfile.clb = parseInt(this.dataset.value);
          updateResults();
        });
      });

      // Experience buttons
      document.querySelectorAll('[data-factor="experience"]').forEach(btn => {
        btn.addEventListener('click', function() {
          document.querySelectorAll('[data-factor="experience"]').forEach(b => b.classList.remove('active'));
          this.classList.add('active');
          currentProfile.experience = parseInt(this.dataset.value);
          updateResults();
        });
      });

      // NOC type buttons
      document.querySelectorAll('[data-factor="noc"]').forEach(btn => {
        btn.addEventListener('click', function() {
          document.querySelectorAll('[data-factor="noc"]').forEach(b => b.classList.remove('active'));
          this.classList.add('active');
          currentProfile.noc = this.dataset.value;
          updateResults();
        });
      });

      // Reset button
      document.getElementById('reset-scenarios').addEventListener('click', function() {
        resetToDefault();
      });
    }

    // Calculate enhanced scores based on selected factors
    function calculateEnhancedScores() {
      const enhanced = {};
      
      Object.keys(baseScores).forEach(program => {
        const base = baseScores[program];
        let enhancedScore = base.score;
        
        // Add CLB points
        enhancedScore += scoreMultipliers.clb[currentProfile.clb];
        
        // Add experience points
        enhancedScore += scoreMultipliers.experience[currentProfile.experience];
        
        // Add NOC points
        enhancedScore += scoreMultipliers.noc[currentProfile.noc];
        
        // Special eligibility logic for CEC
        let isEligible = enhancedScore >= base.threshold;
        if (base.requiresExperience && currentProfile.experience === 0) {
          isEligible = false; // CEC requires Canadian experience regardless of score
        }
        
        enhanced[program] = {
          score: enhancedScore,
          eligible: isEligible,
          threshold: base.threshold,
          baseScore: base.score,
          requiresExperience: base.requiresExperience
        };
      });
      
      return enhanced;
    }

    // Update the results display
    function updateResults() {
      const enhancedScores = calculateEnhancedScores();
      
      // Update before results (baseline)
      updateResultsDisplay('before-results', baseScores, false);
      
      // Update after results (enhanced)
      updateResultsDisplay('after-results', enhancedScores, true);
    }

    // Update a specific results container
    function updateResultsDisplay(containerId, scores, showChanges) {
      const container = document.getElementById(containerId);
      container.innerHTML = '';
      
      Object.entries(scores).forEach(([program, data]) => {
        const programName = getProgramDisplayName(program);
        const programColor = getProgramColor(program);
        const isEligible = data.eligible;
        
        const resultCard = document.createElement('div');
        resultCard.className = `result-card ${isEligible ? 'eligible' : 'not-eligible'}`;
        
        const scoreChange = showChanges && data.baseScore ? data.score - data.baseScore : 0;
        const changeText = scoreChange > 0 ? `+${scoreChange}` : scoreChange < 0 ? `${scoreChange}` : '';
        const changeClass = scoreChange > 0 ? 'score-increase' : scoreChange < 0 ? 'score-decrease' : '';
        
        resultCard.innerHTML = `
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold text-gray-900 dark:text-white">${programName}</span>
            <div class="text-right">
              <span class="text-2xl font-bold ${programColor} score-change">${data.score}</span>
              ${showChanges && changeText ? `<span class="ml-2 text-sm ${changeClass}">(${changeText})</span>` : ''}
            </div>
          </div>
          <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2 mb-2">
            <div class="${programColor} h-2 rounded-full transition-all duration-500" style="width: ${Math.min((data.score / data.threshold) * 100, 100)}%"></div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600 dark:text-gray-400">
              ${isEligible ? '✅ Eligible' : '⚠️ Not Eligible'}
            </span>
            <span class="text-xs text-gray-500 dark:text-gray-400">
              Threshold: ${data.threshold}
            </span>
          </div>
        `;
        
        container.appendChild(resultCard);
      });
    }

    // Get program display names
    function getProgramDisplayName(program) {
      const names = {
        'cec': 'Canadian Experience Class',
        'oinp': 'OINP Points',
        'bcpnp': 'BCPNP Score',
        'aaip': 'AAIP (Alberta)'
      };
      return names[program] || program;
    }

    // Get program colors
    function getProgramColor(program) {
      const colors = {
        'cec': 'text-blue-600',
        'oinp': 'text-green-600',
        'bcpnp': 'text-purple-600',
        'aaip': 'text-orange-600'
      };
      return colors[program] || 'text-gray-600';
    }

    // Reset to default scenario
    function resetToDefault() {
      currentProfile = { clb: 7, experience: 0, noc: 'regular' };
      
      // Reset button states
      document.querySelectorAll('[data-factor="clb"]').forEach(btn => {
        btn.classList.toggle('active', btn.dataset.value === '7');
      });
      document.querySelectorAll('[data-factor="experience"]').forEach(btn => {
        btn.classList.toggle('active', btn.dataset.value === '0');
      });
      document.querySelectorAll('[data-factor="noc"]').forEach(btn => {
        btn.classList.toggle('active', btn.dataset.value === 'regular');
      });
      
      updateResults();
    }

    // Initialize the analyzer
    initScenarioAnalyzer();
  });

  // Smooth scrolling for navigation links
  document.addEventListener('DOMContentLoaded', function() {
    const navLinks = document.querySelectorAll('.nav-link');
    
    navLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        
        const targetId = this.getAttribute('href').substring(1);
        const targetSection = document.getElementById(targetId);
        
        if (targetSection) {
          const offsetTop = targetSection.offsetTop - 80; // Account for sticky nav height
          window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
          });
        }
      });
    });

    // Interactive animations for Revolutionary section
    initRevolutionaryAnimations();
    
    // Interactive animations for Process Steps section
    initProcessStepAnimations();
  });

  // Revolutionary section interactive animations
  function initRevolutionaryAnimations() {
    const title = document.getElementById('revolutionary-title');
    const featureCards = document.querySelectorAll('.feature-card');
    
    // Title click animation
    if (title) {
      title.addEventListener('click', function() {
        this.style.transform = 'scale(1.1) rotate(2deg)';
        this.style.filter = 'brightness(1.2)';
        
        setTimeout(() => {
          this.style.transform = 'scale(1) rotate(0deg)';
          this.style.filter = 'brightness(1)';
        }, 300);
      });
    }
    
    // Feature card interactions
    featureCards.forEach(card => {
      // Click animation
      card.addEventListener('click', function() {
        const feature = this.dataset.feature;
        this.style.transform = 'scale(0.95)';
        
        // Add ripple effect
        const ripple = document.createElement('div');
        ripple.className = 'ripple-effect';
        ripple.style.cssText = `
          position: absolute;
          border-radius: 50%;
          background: rgba(59, 130, 246, 0.3);
          transform: scale(0);
          animation: ripple 0.6s linear;
          pointer-events: none;
        `;
        
        const rect = this.getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        ripple.style.width = ripple.style.height = size + 'px';
        ripple.style.left = (rect.width / 2 - size / 2) + 'px';
        ripple.style.top = (rect.height / 2 - size / 2) + 'px';
        
        this.appendChild(ripple);
        
        setTimeout(() => {
          this.style.transform = 'scale(1)';
          ripple.remove();
        }, 300);
        
        // Log feature interaction
        console.log(`Feature card clicked: ${feature}`);
      });
      
      // Hover sound effect simulation (visual feedback)
      card.addEventListener('mouseenter', function() {
        this.style.borderColor = 'rgba(59, 130, 246, 0.5)';
        this.style.boxShadow = '0 20px 40px rgba(59, 130, 246, 0.15)';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.borderColor = '';
        this.style.boxShadow = '';
      });
    });
  }
  
  // Process Step Card Interactive Animations
  function initProcessStepAnimations() {
    const processCards = document.querySelectorAll('.process-step-card');
    
    processCards.forEach((card, index) => {
      // Add staggered entrance animation
      card.style.opacity = '0';
      card.style.transform = 'translateY(30px)';
      
      setTimeout(() => {
        card.style.transition = 'all 0.8s ease-out';
        card.style.opacity = '1';
        card.style.transform = 'translateY(0)';
      }, index * 200);
      
      // Click interactions
      card.addEventListener('click', function() {
        const step = this.dataset.step;
        
        // Add click animation
        this.style.transform = 'scale(0.95) rotate(1deg)';
        
        // Add success effect for completion
        if (step === '4') {
          this.style.boxShadow = '0 0 30px rgba(34, 197, 94, 0.5)';
          this.style.borderColor = 'rgb(34, 197, 94)';
          
          setTimeout(() => {
            this.style.boxShadow = '';
            this.style.borderColor = '';
          }, 1000);
        }
        
        // Reset transform
        setTimeout(() => {
          this.style.transform = '';
        }, 300);
        
        // Log step interaction
        console.log(`Process step ${step} clicked`);
        
        // Show step details (could be expanded later)
        showStepDetails(step);
      });
      
      // Hover sound effect simulation
      card.addEventListener('mouseenter', function() {
        this.style.zIndex = '10';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.zIndex = '1';
      });
    });
  }
  
  // Show step details (placeholder for future expansion)
  function showStepDetails(step) {
    const stepNames = {
      '1': 'Complete Intake Process',
      '2': 'Multi-Program Analysis', 
      '3': 'Real-Time Comparison',
      '4': 'ImmiReport Generation'
    };
    
    // Could show modal, tooltip, or expand card
    console.log(`Showing details for: ${stepNames[step]}`);
  }
</script>
