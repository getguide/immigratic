---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Visa Eligibility Checker" 
  description="Check your eligibility for Canadian immigration programs including Express Entry, Family Sponsorship, Work Permits, and Study Permits."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-600 to-green-600 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-responsive-xl font-bold mb-6">
        AI-Powered Visa Eligibility Checker
      </h1>
      <p class="text-responsive text-blue-100 max-w-3xl mx-auto">
        Get instant feedback on your eligibility for Canadian immigration programs. Our advanced AI analyzes your profile and provides personalized recommendations.
      </p>
    </div>
  </section>

  <!-- Eligibility Checker Form -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-2xl shadow-large p-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">
            Check Your Eligibility
          </h2>
          <p class="text-gray-600">
            Answer a few questions to get personalized immigration recommendations
          </p>
        </div>

        <form 
          class="space-y-8"
          x-data="{
            currentStep: 1,
            totalSteps: 5,
            formData: {
              program: '',
              age: '',
              education: '',
              experience: '',
              language: '',
              family: '',
              funds: '',
              jobOffer: '',
              province: ''
            },
            results: null,
            showResults: false
          }"
          @submit.prevent="submitForm()"
        >
          <!-- Step 1: Program Selection -->
          <div x-show="currentStep === 1" class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Which immigration program are you interested in?</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <label class="flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-blue-300 transition-colors">
                  <input type="radio" name="program" value="express-entry" x-model="formData.program" class="sr-only">
                  <div class="w-4 h-4 border-2 border-gray-300 rounded-full mr-3 flex-shrink-0"></div>
                  <div>
                    <div class="font-medium text-gray-900">Express Entry</div>
                    <div class="text-sm text-gray-500">Federal Skilled Worker, Trades, or Experience Class</div>
                  </div>
                </label>
                
                <label class="flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-blue-300 transition-colors">
                  <input type="radio" name="program" value="family-sponsorship" x-model="formData.program" class="sr-only">
                  <div class="w-4 h-4 border-2 border-gray-300 rounded-full mr-3 flex-shrink-0"></div>
                  <div>
                    <div class="font-medium text-gray-900">Family Sponsorship</div>
                    <div class="text-sm text-gray-500">Sponsor spouse, children, or parents</div>
                  </div>
                </label>
                
                <label class="flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-blue-300 transition-colors">
                  <input type="radio" name="program" value="work-permit" x-model="formData.program" class="sr-only">
                  <div class="w-4 h-4 border-2 border-gray-300 rounded-full mr-3 flex-shrink-0"></div>
                  <div>
                    <div class="font-medium text-gray-900">Work Permit</div>
                    <div class="text-sm text-gray-500">Temporary work authorization</div>
                  </div>
                </label>
                
                <label class="flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-blue-300 transition-colors">
                  <input type="radio" name="program" value="study-permit" x-model="formData.program" class="sr-only">
                  <div class="w-4 h-4 border-2 border-gray-300 rounded-full mr-3 flex-shrink-0"></div>
                  <div>
                    <div class="font-medium text-gray-900">Study Permit</div>
                    <div class="text-sm text-gray-500">Study at a Canadian institution</div>
                  </div>
                </label>
              </div>
            </div>
          </div>

          <!-- Step 2: Basic Information -->
          <div x-show="currentStep === 2" class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="form-label">Age</label>
                  <select x-model="formData.age" class="form-input">
                    <option value="">Select your age</option>
                    <option value="18-25">18-25 years</option>
                    <option value="26-35">26-35 years</option>
                    <option value="36-45">36-45 years</option>
                    <option value="46-55">46-55 years</option>
                    <option value="55+">55+ years</option>
                  </select>
                </div>
                
                <div>
                  <label class="form-label">Education Level</label>
                  <select x-model="formData.education" class="form-input">
                    <option value="">Select education level</option>
                    <option value="high-school">High School</option>
                    <option value="diploma">College Diploma</option>
                    <option value="bachelor">Bachelor's Degree</option>
                    <option value="master">Master's Degree</option>
                    <option value="phd">PhD</option>
                  </select>
                </div>
              </div>
            </div>
          </div>

          <!-- Step 3: Work Experience -->
          <div x-show="currentStep === 3" class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Work Experience</h3>
              <div class="space-y-6">
                <div>
                  <label class="form-label">Years of Skilled Work Experience</label>
                  <select x-model="formData.experience" class="form-input">
                    <option value="">Select experience</option>
                    <option value="0">No experience</option>
                    <option value="1">1 year</option>
                    <option value="2">2 years</option>
                    <option value="3">3 years</option>
                    <option value="4">4 years</option>
                    <option value="5+">5+ years</option>
                  </select>
                </div>
                
                <div>
                  <label class="form-label">Language Proficiency</label>
                  <select x-model="formData.language" class="form-input">
                    <option value="">Select language level</option>
                    <option value="basic">Basic (CLB 4-5)</option>
                    <option value="intermediate">Intermediate (CLB 6-7)</option>
                    <option value="advanced">Advanced (CLB 8-9)</option>
                    <option value="expert">Expert (CLB 10+)</option>
                  </select>
                </div>
              </div>
            </div>
          </div>

          <!-- Step 4: Additional Factors -->
          <div x-show="currentStep === 4" class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Additional Factors</h3>
              <div class="space-y-6">
                <div>
                  <label class="form-label">Family in Canada</label>
                  <select x-model="formData.family" class="form-input">
                    <option value="">Select option</option>
                    <option value="none">No family in Canada</option>
                    <option value="spouse">Spouse/Partner</option>
                    <option value="children">Children</option>
                    <option value="parents">Parents</option>
                    <option value="siblings">Siblings</option>
                  </select>
                </div>
                
                <div>
                  <label class="form-label">Available Funds (CAD)</label>
                  <select x-model="formData.funds" class="form-input">
                    <option value="">Select amount</option>
                    <option value="0-10000">$0 - $10,000</option>
                    <option value="10000-25000">$10,000 - $25,000</option>
                    <option value="25000-50000">$25,000 - $50,000</option>
                    <option value="50000+">$50,000+</option>
                  </select>
                </div>
                
                <div>
                  <label class="form-label">Job Offer in Canada</label>
                  <select x-model="formData.jobOffer" class="form-input">
                    <option value="">Select option</option>
                    <option value="no">No job offer</option>
                    <option value="yes">Yes, I have a job offer</option>
                    <option value="lmia">Yes, with LMIA</option>
                  </select>
                </div>
              </div>
            </div>
          </div>

          <!-- Step 5: Province Preference -->
          <div x-show="currentStep === 5" class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Province Preference</h3>
              <div>
                <label class="form-label">Preferred Province/Territory</label>
                <select x-model="formData.province" class="form-input">
                  <option value="">Select province</option>
                  <option value="ontario">Ontario</option>
                  <option value="quebec">Quebec</option>
                  <option value="british-columbia">British Columbia</option>
                  <option value="alberta">Alberta</option>
                  <option value="manitoba">Manitoba</option>
                  <option value="saskatchewan">Saskatchewan</option>
                  <option value="nova-scotia">Nova Scotia</option>
                  <option value="new-brunswick">New Brunswick</option>
                  <option value="pei">Prince Edward Island</option>
                  <option value="newfoundland">Newfoundland & Labrador</option>
                  <option value="northwest-territories">Northwest Territories</option>
                  <option value="nunavut">Nunavut</option>
                  <option value="yukon">Yukon</option>
                  <option value="any">Any province</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Navigation Buttons -->
          <div class="flex justify-between pt-6">
            <button 
              type="button" 
              x-show="currentStep > 1"
              @click="currentStep--"
              class="btn-secondary"
            >
              Previous
            </button>
            
            <button 
              type="button" 
              x-show="currentStep < totalSteps"
              @click="currentStep++"
              class="btn-primary"
            >
              Next
            </button>
            
            <button 
              type="submit" 
              x-show="currentStep === totalSteps"
              class="btn-primary"
            >
              Check Eligibility
            </button>
          </div>
        </form>

        <!-- Results Section -->
        <div x-show="showResults" x-transition class="mt-8 p-6 bg-gradient-to-br from-blue-50 to-green-50 rounded-xl border border-blue-200">
          <div class="text-center mb-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Your Eligibility Results</h3>
            <p class="text-gray-600">Based on your profile, here are your immigration options:</p>
          </div>
          
          <div class="space-y-4">
            <div class="bg-white rounded-lg p-4 border border-blue-200">
              <div class="flex items-center justify-between mb-2">
                <h4 class="font-semibold text-gray-900">Express Entry Score</h4>
                <span class="text-2xl font-bold text-blue-600">485</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-gradient-to-r from-green-500 to-blue-500 h-3 rounded-full" style="width: 75%"></div>
              </div>
              <p class="text-sm text-gray-600 mt-2">Good score! You have a strong chance of receiving an ITA.</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="bg-white rounded-lg p-4 border border-green-200">
                <h4 class="font-semibold text-gray-900 mb-2">Recommended Programs</h4>
                <ul class="space-y-1 text-sm text-gray-600">
                  <li>• Federal Skilled Worker Program</li>
                  <li>• Provincial Nominee Program</li>
                  <li>• Atlantic Immigration Program</li>
                </ul>
              </div>
              
              <div class="bg-white rounded-lg p-4 border border-orange-200">
                <h4 class="font-semibold text-gray-900 mb-2">Next Steps</h4>
                <ul class="space-y-1 text-sm text-gray-600">
                  <li>• Improve language scores</li>
                  <li>• Get education assessment</li>
                  <li>• Prepare documents</li>
                </ul>
              </div>
            </div>
            
            <div class="text-center pt-4">
              <a href="/consultation" class="btn-primary">
                Book Free Consultation
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-responsive-lg font-bold text-gray-900 mb-4">
          Why Use Our Visa Checker?
        </h2>
        <p class="text-responsive text-gray-600 max-w-3xl mx-auto">
          Our AI-powered tool provides instant, accurate assessments based on the latest immigration policies and requirements.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Instant Results</h3>
          <p class="text-gray-600">Get immediate feedback on your eligibility and recommended programs</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Accurate Assessment</h3>
          <p class="text-gray-600">Based on current immigration policies and requirements</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Personalized Guidance</h3>
          <p class="text-gray-600">Receive tailored recommendations for your specific situation</p>
        </div>
      </div>
    </div>
  </section>

  <script>
    function submitForm() {
      // Simulate form processing
      this.showResults = true;
      this.$el.scrollIntoView({ behavior: 'smooth' });
    }
  </script>
</Layout> 