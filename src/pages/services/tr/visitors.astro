---
import Layout from '../../../layouts/Layout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';

export const metadata = {
  title: 'Visitor Visas - Temporary Residence | Immigratic',
  description: 'Express Entry Visitor Visas for temporary residence in Canada. Tourism, business visits, family visits. Coming soon - comprehensive visitor visa assessment tools.',
  keywords: 'Visitor Visas, tourism, business visits, family visits, temporary residence, Canada immigration, tourist visa',
  openGraph: {
    title: 'Visitor Visas - Temporary Residence | Immigratic',
    description: 'Express Entry Visitor Visas for temporary residence in Canada. Tourism, business visits, family visits. Coming soon - comprehensive visitor visa assessment tools.',
    image: '/images/og-image.jpg',
    url: 'https://immigratic.com/services/tr/visitors'
  }
};
---

<Layout title="Visitor Visas - Temporary Residence | Immigratic">
  <Breadcrumbs 
    items={[
      { text: "Home", href: "/" },
      { text: "Services", href: "/services/" },
      { text: "TR", href: "/services/tr/" },
      { text: "Visitors", current: true }
    ]}
  />

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-green-900 via-teal-900 to-cyan-900">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-r from-green-600/10 to-teal-600/10"></div>
      <div class="absolute top-20 left-20 w-96 h-96 bg-green-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-teal-500/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-20 text-center">
      <!-- Coming Soon Badge -->
      <div class="inline-flex items-center gap-3 mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
        <div class="w-3 h-3 bg-gradient-to-r from-green-400 to-teal-400 rounded-full animate-pulse"></div>
        <span class="text-green-300 font-semibold text-sm uppercase tracking-wider">Coming Soon</span>
        <div class="w-3 h-3 bg-gradient-to-r from-teal-400 to-cyan-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Main Title -->
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
        Visitor Visas
        <span class="block bg-gradient-to-r from-green-400 via-teal-400 to-cyan-400 bg-clip-text text-transparent animate-gradient-shift">
          Temporary Residence
        </span>
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-green-100 max-w-4xl mx-auto mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
        Comprehensive visitor visa solutions for temporary residence in Canada. 
        <br class="hidden md:block">
        <span class="text-teal-300">Tourism, business visits, and family visits</span> welcome.
      </p>

      <!-- Visitor Icon -->
      <div class="w-32 h-32 bg-gradient-to-br from-green-500/20 to-teal-500/20 rounded-full flex items-center justify-center mx-auto mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
        <span class="text-6xl">üõ´</span>
      </div>

      <!-- Coming Soon Message -->
      <div class="max-w-2xl mx-auto opacity-0 animate-fade-in-up" style="animation-delay: 1s; animation-fill-mode: forwards;">
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl border border-white/20 p-8">
          <h2 class="text-2xl font-bold text-white mb-4">üöß Under Development</h2>
          <p class="text-green-100 mb-6">
            We're working hard to bring you a comprehensive Visitor Visa assessment tool. 
            This specialized pathway will include:
          </p>
          <ul class="text-left text-green-100 space-y-2 mb-6">
            <li class="flex items-center gap-2">
              <span class="text-green-400">‚úÖ</span>
              <span>Tourism & leisure purpose assessment</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-green-400">‚úÖ</span>
              <span>Business visit eligibility checker</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-green-400">‚úÖ</span>
              <span>Family visit requirements guide</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-green-400">‚úÖ</span>
              <span>Processing timeline estimates</span>
            </li>
          </ul>
          <p class="text-sm text-green-200">
            Expected launch: <span class="text-teal-300 font-semibold">Q1 2026</span>
          </p>
        </div>
      </div>

      <!-- Back to Services -->
      <div class="mt-12 opacity-0 animate-fade-in-up" style="animation-delay: 1.2s; animation-fill-mode: forwards;">
        <a href="/services/tr" class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 backdrop-blur-sm rounded-xl border border-white/20 text-white/90 hover:text-white hover:bg-white/20 transition-all duration-300">
          <span>‚Üê</span>
          <span>Back to TR Services</span>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }
  
  .animate-gradient-shift {
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
  }


</style>
