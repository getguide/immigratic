---
import Layout from '../../../../../layouts/Layout.astro';

export const metadata = {
  title: 'Foreign Worker - Ontario PNP | Immigratic',
  description: 'Foreign Worker stream under Ontario Immigrant Nominee Program (OINP). For skilled workers with Ontario job offers and relevant work experience.',
  keywords: 'Foreign Worker, Ontario PNP, OINP, Skilled workers, Ontario job offer, work experience, Ontario immigration',
  openGraph: {
    title: 'Foreign Worker - Ontario PNP | Immigratic',
    description: 'Foreign Worker stream under Ontario Immigrant Nominee Program (OINP). For skilled workers with Ontario job offers and relevant work experience.',
    image: '/images/og-image.jpg',
    url: 'https://immigratic.com/services/pr/oinp/foreign-worker'
  }
};
---

<Layout title="Foreign Worker - Ontario PNP | Immigratic">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-emerald-900 via-green-900 to-emerald-900">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-r from-emerald-600/10 to-green-600/10"></div>
      <div class="absolute top-20 left-20 w-96 h-96 bg-emerald-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-green-500/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-20 text-center">
      <!-- Coming Soon Badge -->
      <div class="inline-flex items-center gap-3 mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
        <div class="w-3 h-3 bg-gradient-to-r from-emerald-400 to-green-400 rounded-full animate-pulse"></div>
        <span class="text-emerald-300 font-semibold text-sm uppercase tracking-wider">Coming Soon</span>
        <div class="w-3 h-3 bg-gradient-to-r from-green-400 to-emerald-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>

      <!-- Main Title -->
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
        Foreign
        <span class="block bg-gradient-to-r from-emerald-400 via-green-400 to-emerald-400 bg-clip-text text-transparent animate-gradient-shift">
          Worker
        </span>
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-emerald-100 max-w-4xl mx-auto mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
        Ontario Immigrant Nominee Program (OINP) - Skilled Worker Pathway
        <br class="hidden md:block">
        <span class="text-yellow-300">For skilled workers</span> with Ontario job offers and relevant work experience.
      </p>

      <!-- Program Icon -->
      <div class="w-32 h-32 bg-gradient-to-br from-emerald-500/20 to-green-500/20 rounded-full flex items-center justify-center mx-auto mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
        <span class="text-6xl">üë∑</span>
      </div>

      <!-- Coming Soon Message -->
      <div class="max-w-2xl mx-auto opacity-0 animate-fade-in-up" style="animation-delay: 1s; animation-fill-mode: forwards;">
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl border border-white/20 p-8">
          <h2 class="text-2xl font-bold text-white mb-4">üöß Under Development</h2>
          <p class="text-emerald-100 mb-6">
            We're working hard to bring you a comprehensive Foreign Worker assessment tool.
            This program will include:
          </p>
          <ul class="text-left text-emerald-100 space-y-2 mb-6">
            <li class="flex items-center gap-2">
              <span class="text-emerald-400">‚úÖ</span>
              <span>Job offer requirement verification</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-emerald-400">‚úÖ</span>
              <span>Work experience assessment</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-emerald-400">‚úÖ</span>
              <span>Language requirements assessment</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-emerald-400">‚úÖ</span>
              <span>Skills and qualifications verification</span>
            </li>
          </ul>
          <p class="text-sm text-emerald-200">
            Expected launch: <span class="text-yellow-300 font-semibold">Q1 2026</span>
          </p>
        </div>
      </div>

      <!-- Back to OINP Hub -->
      <div class="mt-12 opacity-0 animate-fade-in-up" style="animation-delay: 1.2s; animation-fill-mode: forwards;">
        <a href="/services/pr/oinp" class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 backdrop-blur-sm rounded-xl border border-white/20 text-white/90 hover:text-white hover:bg-white/20 transition-all duration-300">
          <span>‚Üê</span>
          <span>Back to OINP Hub</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Breadcrumb Navigation -->
  <nav class="bg-gray-100 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-2 text-sm text-gray-600">
        <a href="/" class="hover:text-blue-600">Home</a>
        <span>/</span>
        <a href="/services" class="hover:text-blue-600">Services</a>
        <span>/</span>
        <a href="/services/pr" class="hover:text-blue-600">Permanent Residency</a>
        <span>/</span>
        <a href="/services/pr/oinp" class="hover:text-blue-600">OINP</a>
        <span>/</span>
        <span class="text-gray-900 font-medium">Foreign Worker</span>
      </div>
    </div>
  </nav>
</Layout>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  .animate-gradient-shift {
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
  }
</style>
