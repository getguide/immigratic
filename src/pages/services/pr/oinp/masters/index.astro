---
import Layout from '../../../../../layouts/Layout.astro';

export const metadata = {
  title: 'Masters Graduate - Ontario PNP | Immigratic',
  description: 'Masters Graduate stream under Ontario Immigrant Nominee Program (OINP). Direct PR pathway for Masters graduates from eligible Ontario universities. Coming soon - comprehensive assessment tools.',
  keywords: 'Masters Graduate, Ontario PNP, OINP, Direct PR, Ontario universities, Ontario immigration, permanent residence',
  openGraph: {
    title: 'Masters Graduate - Ontario PNP | Immigratic',
    description: 'Masters Graduate stream under Ontario Immigrant Nominee Program (OINP). Direct PR pathway for Masters graduates from eligible Ontario universities. Coming soon - comprehensive assessment tools.',
    image: '/images/og-image.jpg',
    url: 'https://immigratic.com/services/pr/oinp/masters'
  }
};
---

<Layout title="Masters Graduate - Ontario PNP | Immigratic">
  <!-- Breadcrumbs - At Very Top of Page -->
  <div class="bg-gradient-to-r from-blue-900/90 via-purple-900/90 to-indigo-900/90 backdrop-blur-lg border-b border-blue-700/30 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <nav aria-label="Breadcrumb" class="breadcrumb-top">
        <ol>
          <li><a href="/">Home</a></li>
          <li><a href="/services/">Services</a></li>
          <li><a href="/services/pr/">PR</a></li>
          <li><a href="/services/pr/oinp/">OINP</a></li>
          <li aria-current="page">Masters</li>
        </ol>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-teal-900 via-cyan-900 to-teal-900">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-r from-teal-600/10 to-cyan-600/10"></div>
      <div class="absolute top-20 left-20 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-cyan-500/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-20 text-center">
      <!-- Coming Soon Badge -->
      <div class="inline-flex items-center gap-3 mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
        <div class="w-3 h-3 bg-gradient-to-r from-teal-400 to-cyan-400 rounded-full animate-pulse"></div>
        <span class="text-teal-300 font-semibold text-sm uppercase tracking-wider">Coming Soon</span>
        <div class="w-3 h-3 bg-gradient-to-r from-cyan-400 to-teal-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>

      <!-- Main Title -->
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
        Masters
        <span class="block bg-gradient-to-r from-teal-400 via-cyan-400 to-teal-400 bg-clip-text text-transparent animate-gradient-shift">
          Graduate
        </span>
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-teal-100 max-w-4xl mx-auto mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
        Ontario Immigrant Nominee Program (OINP) - Direct PR Pathway
        <br class="hidden md:block">
        <span class="text-yellow-300">Premium direct permanent residency</span> for Masters graduates from eligible Ontario universities.
      </p>

      <!-- Program Icon -->
      <div class="w-32 h-32 bg-gradient-to-br from-teal-500/20 to-cyan-500/20 rounded-full flex items-center justify-center mx-auto mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
        <span class="text-6xl">üéØ</span>
      </div>

      <!-- Coming Soon Message -->
      <div class="max-w-2xl mx-auto opacity-0 animate-fade-in-up" style="animation-delay: 1s; animation-fill-mode: forwards;">
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl border border-white/20 p-8">
          <h2 class="text-2xl font-bold text-white mb-4">üöß Under Development</h2>
          <p class="text-teal-100 mb-6">
            We're working hard to bring you a comprehensive Masters Graduate assessment tool.
            This program will include:
          </p>
          <ul class="text-left text-teal-100 space-y-2 mb-6">
            <li class="flex items-center gap-2">
              <span class="text-teal-400">‚úÖ</span>
              <span>Ontario university eligibility verification</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-teal-400">‚úÖ</span>
              <span>Masters degree requirement assessment</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-teal-400">‚úÖ</span>
              <span>Premium pathway - no job offer required</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-teal-400">‚úÖ</span>
              <span>Direct PR application guidance</span>
            </li>
          </ul>
          <p class="text-sm text-teal-200">
            Expected launch: <span class="text-yellow-300 font-semibold">Q1 2026</span>
          </p>
        </div>
      </div>

      <!-- Back to OINP Hub -->
      <div class="mt-12 opacity-0 animate-fade-in-up" style="animation-delay: 1.2s; animation-fill-mode: forwards;">
        <a href="/services/pr/oinp" class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 backdrop-blur-sm rounded-xl border border-white/20 text-white/90 hover:text-white hover:bg-white/20 transition-all duration-300">
          <span>‚Üê</span>
          <span>Back to OINP Hub</span>
        </a>
      </div>
    </div>
  </section>

</Layout>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  .animate-gradient-shift {
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
  }

  /* Top Breadcrumb Styling */
  .breadcrumb-top {
    font-size: 14px;
    margin-bottom: 0;
  }
  
  .breadcrumb-top ol {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
    align-items: center;
  }
  
  .breadcrumb-top li + li::before {
    content: ">";
    padding: 0 8px;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
  }
  
  .breadcrumb-top a {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.9);
    transition: color 0.2s ease;
    font-weight: 500;
  }
  
  .breadcrumb-top a:hover {
    color: rgba(255, 255, 255, 1);
    text-decoration: underline;
  }
  
  .breadcrumb-top li:last-child {
    color: rgba(255, 255, 255, 0.95);
    font-weight: 600;
  }
  
  /* Mobile responsiveness for top breadcrumbs */
  @media (max-width: 640px) {
    .breadcrumb-top {
      font-size: 12px;
    }
    
    .breadcrumb-top ol {
      flex-wrap: wrap;
    }
    
    .breadcrumb-top li + li::before {
      padding: 0 4px;
    }
  }
</style>
