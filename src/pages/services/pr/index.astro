<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Timeline Progress Animation
    function animateTimelines() {
      // Main Express Entry Timeline
      const mainTimeline = document.getElementById('timeline-line');
      const mainSteps = document.querySelectorAll('.timeline-step');
      
      // OINP Express Entry Timeline
      const oinpEETimeline = document.querySelector('.oinp-ee-timeline-line');
      const oinpEESteps = document.querySelectorAll('.oinp-ee-timeline-step');
      
      // OINP Direct Timeline
      const oinpDirectTimeline = document.querySelector('.oinp-direct-timeline-line');
      const oinpDirectSteps = document.querySelectorAll('.oinp-direct-timeline-step');
      
      // Function to animate a specific timeline
      function animateSpecificTimeline(timelineElement: HTMLElement | null, steps: NodeListOf<HTMLElement>) {
        if (!timelineElement || steps.length === 0) return;

        const totalSteps = steps.length;
        let activeCount = 0;

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('active');
              activeCount = Math.min(activeCount + 1, totalSteps);
            } else if (entry.boundingClientRect.top > 0) { // Only decrement if scrolling up
              entry.target.classList.remove('active');
              activeCount = Math.max(activeCount - 1, 0);
            }
            
            // Update progress line
            const progress = (activeCount / totalSteps) * 100;
            timelineElement.style.height = `${progress}%`;
          });
        }, { threshold: 0.5, rootMargin: '0px 0px -100px 0px' });

        steps.forEach(step => observer.observe(step));
      }
      
      // Animate all timelines
      if (mainTimeline && mainSteps.length) {
        animateSpecificTimeline(mainTimeline, mainSteps);
      }
      
      if (oinpEETimeline && oinpEESteps.length) {
        animateSpecificTimeline(oinpEETimeline, oinpEESteps);
      }
      
      if (oinpDirectTimeline && oinpDirectSteps.length) {
        animateSpecificTimeline(oinpDirectTimeline, oinpDirectSteps);
      }

      // Add observer for steps to add 'active' class
      const stepObserver = new IntersectionObserver((entries: IntersectionObserverEntry[]) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('active');
          } else {
            entry.target.classList.remove('active');
          }
        });
      }, { threshold: 0.5 });

      // Observe all timeline cards
      document.querySelectorAll('.timeline-card').forEach(card => {
        stepObserver.observe(card);
      });
    }
    
    // Celebration Animation
    function initCelebration() {
      const celebrationBtn = document.getElementById('celebration-btn');
      const confettiContainer = document.getElementById('confetti-container');
      
      if (!celebrationBtn || !confettiContainer) return;
      
      celebrationBtn.addEventListener('click', function() {
        // Create confetti animation
        createConfetti(confettiContainer);
        
        // Add celebration effects
        celebrationBtn.innerHTML = 'üéä CELEBRATING! üéä';
        celebrationBtn.classList.add('animate-bounce');
        
        // Reset after animation
        setTimeout(() => {
          celebrationBtn.innerHTML = 'üéâ Click to Celebrate! üéâ';
          celebrationBtn.classList.remove('animate-bounce');
        }, 3000);
      });
    }
    
    // Confetti Animation Function
    function createConfetti(container: HTMLElement | null) {
      if (!container) return;
      const colors = ['#FFD700', '#FF6B6B', '#4ECDC4', '#45B7D1', '#96CEB4', '#FFEAA7'];
      const confettiCount = 50;
      
      for (let i = 0; i < confettiCount; i++) {
        const confetti = document.createElement('div');
        confetti.style.position = 'absolute';
        confetti.style.width = '10px';
        confetti.style.height = '10px';
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.left = Math.random() * 100 + '%';
        confetti.style.top = '-10px';
        confetti.style.borderRadius = '50%';
        confetti.style.pointerEvents = 'none';
        confetti.style.zIndex = '1000';
        
        container.appendChild(confetti);
        
        // Animate confetti falling
        const duration = Math.random() * 2000 + 1000; // 1-3 seconds
        const rotation = Math.random() * 360;
        
        confetti.animate([
          {
            transform: `translateY(0px) rotate(0deg)`,
            opacity: 1
          },
          {
            transform: `translateY(${window.innerHeight + 100}px) rotate(${rotation}deg)`,
            opacity: 0
          }
        ], {
          duration: duration,
          easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)'
        }).onfinish = () => {
          confetti.remove();
        };
      }
    }
    
    // Counter Animation (for success metrics)
    function animateCounters() {
      const counters = document.querySelectorAll('.counter');
      const speed = 200;
      
      counters.forEach((counter: HTMLElement) => {
        const target = parseFloat(counter.getAttribute('data-target') ?? '0');
        const isDecimal = counter.hasAttribute('data-decimal');
        const increment = target / (speed / 16);
        let current = 0;
        
        const updateCounter = () => {
          if (current < target) {
            current += increment;
            if (current > target) current = target;
            
            if (isDecimal) {
              counter.textContent = current.toFixed(1);
            } else {
              counter.textContent = Math.floor(current);
            }
            
            requestAnimationFrame(updateCounter);
          }
        };
        
        updateCounter();
      });
    }
    
    // Initialize counter animation when success metrics are visible
    const successMetrics = document.querySelector('.grid .counter');
    if (successMetrics) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            setTimeout(animateCounters, 500);
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.5 });
      
      observer.observe(successMetrics.closest('.grid'));
    }
    
    // Initialize all functionality
    animateTimelines();
    initCelebration();
  });
</script>

