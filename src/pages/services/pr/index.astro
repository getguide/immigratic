---
import Layout from '../../../layouts/Layout.astro';

export const metadata = {
  title: 'Permanent Residency Programs | Express Entry, PNP, Family Sponsorship | Immigratic',
  description: 'Explore all Canadian permanent residency programs including Express Entry, Provincial Nominee Programs, Family Sponsorship, and more. Expert guidance for your path to Canadian PR.',
  image: '/images/permanent-residency-programs.jpg',
  canonical: 'https://immigratic.com/services/pr'
};
---

<Layout title="Permanent Residency Programs | Express Entry, PNP, Family Sponsorship | Immigratic">
  <!-- Hero Section -->
  <section class="relative min-h-screen bg-gradient-to-br from-green-900 via-blue-900 to-indigo-900 overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0">
      <div class="absolute top-20 left-20 w-72 h-72 bg-green-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-indigo-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 4s;"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-20">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-white/80 mb-8">
        <a href="/" class="hover:text-white transition-colors">Home</a>
        <span class="text-white/50">‚Üí</span>
        <a href="/services" class="hover:text-white transition-colors">Services</a>
        <span class="text-white/50">‚Üí</span>
        <span class="text-white font-semibold">PR</span>
      </nav>

      <!-- Hero Content -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 mb-6">
          <div class="w-3 h-3 bg-gradient-to-r from-green-400 to-blue-400 rounded-full animate-pulse"></div>
          <span class="text-green-300 font-semibold text-sm uppercase tracking-wider">Permanent Residency</span>
          <div class="w-3 h-3 bg-gradient-to-r from-blue-400 to-indigo-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
        </div>
        
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6">
          Your Path to
          <span class="block bg-gradient-to-r from-green-400 via-blue-400 to-indigo-400 bg-clip-text text-transparent">
            Canadian Citizenship
          </span>
        </h1>
        
        <p class="text-xl md:text-2xl text-blue-100 max-w-4xl mx-auto mb-12">
          Comprehensive permanent residency solutions through Express Entry, Provincial Nominee Programs, and Family Sponsorship pathways.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="https://intake.immigratic.com/ma?utm_source=immigratic&utm_medium=website&utm_campaign=pr_page&utm_content=hero_assessment" target="_blank" rel="noopener noreferrer" class="px-8 py-4 bg-gradient-to-r from-green-500 to-blue-600 text-white font-bold rounded-2xl hover:from-green-600 hover:to-blue-700 transition-all duration-300 transform hover:scale-105 shadow-2xl">
            Start PR Assessment
          </a>
          <a href="https://try.immigratic.com/meetings/immicare/165?utm_source=immigratic&utm_medium=website&utm_campaign=pr_page&utm_content=hero_consultation" target="_blank" rel="noopener noreferrer" class="px-8 py-4 border-2 border-white/30 text-white font-bold rounded-2xl hover:bg-white/10 transition-all duration-300 backdrop-blur-sm">
            Book Expert Consultation
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- PR Programs Overview -->
  <section class="py-24 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
          Three Main
          <span class="bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent">
            PR Pathways
          </span>
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Choose the pathway that best fits your profile and maximize your chances of success.
        </p>
      </div>

      <!-- Programs Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
        <!-- Express Entry -->
        <div class="group relative bg-white dark:bg-gray-800 rounded-3xl p-8 shadow-2xl border border-gray-200 dark:border-gray-700 hover:shadow-3xl transition-all duration-500 transform hover:-translate-y-4">
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative z-10">
            <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center text-white text-3xl font-bold mb-6 group-hover:scale-110 transition-transform duration-300">
              üöÄ
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Express Entry</h3>
            
            <div class="space-y-3 mb-6">
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-400">Federal Skilled Worker (FSW)</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-400">Canadian Experience Class (CEC)</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-400">Federal Skilled Trades (FST)</span>
              </div>
            </div>
            
            <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl p-4 mb-6">
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">Latest CRS: 534</div>
                <div class="text-sm text-blue-600 dark:text-blue-400">August 7, 2025</div>
              </div>
            </div>
            
            <a href="/services/pr/federal?utm_source=immigratic&utm_medium=website&utm_campaign=pr_page&utm_content=express_entry_card" class="block w-full text-center px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-300">
              Explore Express Entry
            </a>
          </div>
        </div>

        <!-- Provincial Nominee -->
        <div class="group relative bg-white dark:bg-gray-800 rounded-3xl p-8 shadow-2xl border border-gray-200 dark:border-gray-700 hover:shadow-3xl transition-all duration-500 transform hover:-translate-y-4">
          <div class="absolute inset-0 bg-gradient-to-r from-green-500/5 to-blue-500/5 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative z-10">
            <div class="w-20 h-20 bg-gradient-to-br from-green-500 to-blue-600 rounded-2xl flex items-center justify-center text-white text-3xl font-bold mb-6 group-hover:scale-110 transition-transform duration-300">
              ‚≠ê
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Provincial Nominee</h3>
            
            <div class="space-y-3 mb-6">
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-400">Ontario (OINP)</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-400">British Columbia (BCPNP)</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-400">Alberta (AAIP)</span>
              </div>
            </div>
            
            <div class="bg-green-50 dark:bg-green-900/20 rounded-xl p-4 mb-6">
              <div class="text-center">
                <div class="text-2xl font-bold text-green-600 dark:text-green-400">Lower CRS</div>
                <div class="text-sm text-green-600 dark:text-green-400">Province-Specific</div>
              </div>
            </div>
            
            <a href="/services/pr/pnp?utm_source=immigratic&utm_medium=website&utm_campaign=pr_page&utm_content=pnp_card" class="block w-full text-center px-6 py-3 bg-gradient-to-r from-green-600 to-blue-600 text-white font-semibold rounded-xl hover:from-green-700 hover:to-blue-700 transition-all duration-300">
              Explore PNP Programs
            </a>
          </div>
        </div>

        <!-- Family Sponsorship -->
        <div class="group relative bg-white dark:bg-gray-800 rounded-3xl p-8 shadow-2xl border border-gray-200 dark:border-gray-700 hover:shadow-3xl transition-all duration-500 transform hover:-translate-y-4">
          <div class="absolute inset-0 bg-gradient-to-r from-pink-500/5 to-red-500/5 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative z-10">
            <div class="w-20 h-20 bg-gradient-to-br from-pink-500 to-red-600 rounded-2xl flex items-center justify-center text-white text-3xl font-bold mb-6 group-hover:scale-110 transition-transform duration-300">
              ‚ù§Ô∏è
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Family Sponsorship</h3>
            
            <div class="space-y-3 mb-6">
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-pink-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-400">Spouse & Common-law</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-pink-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-400">Parents & Grandparents</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-pink-500 rounded-full"></div>
