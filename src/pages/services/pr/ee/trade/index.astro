---
import Layout from '../../../../../layouts/Layout.astro';

export const metadata = {
  title: 'Trade Express Entry - Federal Targeted Category | Immigratic',
  description: 'Express Entry Trade category for skilled trades, electricians, plumbers, and carpenters. Coming soon - specialized pathway with lower CRS requirements.',
  keywords: 'Trade Express Entry, skilled trades, electricians, plumbers, carpenters, Express Entry, permanent residency, CRS score, immigration',
  openGraph: {
    title: 'Trade Express Entry - Federal Targeted Category | Immigratic',
    description: 'Express Entry Trade category for skilled trades, electricians, plumbers, and carpenters. Coming soon - specialized pathway with lower CRS requirements.',
    image: '/images/og-image.jpg',
    url: 'https://immigratic.com/services/pr/ee-trade'
  }
};
---

<Layout title="Trade Express Entry - Federal Targeted Category | Immigratic">
  <!-- Breadcrumbs - At Very Top of Page -->
  <div class="bg-gradient-to-r from-blue-900/90 via-purple-900/90 to-indigo-900/90 backdrop-blur-lg border-b border-blue-700/30 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <nav aria-label="Breadcrumb" class="breadcrumb-top">
        <ol>
          <li><a href="/">Home</a></li>
          <li><a href="/services/">Services</a></li>
          <li><a href="/services/pr/">PR</a></li>
          <li><a href="/services/pr/ee/">EE</a></li>
          <li aria-current="page">Trade</li>
        </ol>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-yellow-900 via-orange-900 to-red-900">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-r from-yellow-600/10 to-orange-600/10"></div>
      <div class="absolute top-20 left-20 w-96 h-96 bg-yellow-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-orange-500/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-20 text-center">
      <!-- Coming Soon Badge -->
      <div class="inline-flex items-center gap-3 mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
        <div class="w-3 h-3 bg-gradient-to-r from-yellow-400 to-orange-400 rounded-full animate-pulse"></div>
        <span class="text-yellow-300 font-semibold text-sm uppercase tracking-wider">Coming Soon</span>
        <div class="w-3 h-3 bg-gradient-to-r from-orange-400 to-red-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Main Title -->
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
        Trade
        <span class="block bg-gradient-to-r from-yellow-400 via-orange-400 to-red-400 bg-clip-text text-transparent animate-gradient-shift">
          Express Entry
        </span>
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-yellow-100 max-w-4xl mx-auto mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
        Specialized pathway for skilled trades, electricians, plumbers, and carpenters. 
        <br class="hidden md:block">
        <span class="text-orange-300">Lower CRS requirements</span> for trade occupations.
      </p>

      <!-- Trade Icon -->
      <div class="w-32 h-32 bg-gradient-to-br from-yellow-500/20 to-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
        <span class="text-6xl">üîß</span>
      </div>

      <!-- Coming Soon Message -->
      <div class="max-w-2xl mx-auto opacity-0 animate-fade-in-up" style="animation-delay: 1s; animation-fill-mode: forwards;">
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl border border-white/20 p-8">
          <h2 class="text-2xl font-bold text-white mb-4">üöß Under Development</h2>
          <p class="text-yellow-100 mb-6">
            We're working hard to bring you a comprehensive Trade Express Entry assessment tool. 
            This specialized pathway will include:
          </p>
          <ul class="text-left text-yellow-100 space-y-2 mb-6">
            <li class="flex items-center gap-2">
              <span class="text-green-400">‚úÖ</span>
              <span>Trade occupation eligibility checker</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-green-400">‚úÖ</span>
              <span>CRS score calculator for trade professionals</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-green-400">‚úÖ</span>
              <span>Certification requirements guide</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-green-400">‚úÖ</span>
              <span>Processing timeline estimates</span>
            </li>
          </ul>
          <p class="text-sm text-yellow-200">
            Expected launch: <span class="text-orange-300 font-semibold">Q1 2026</span>
          </p>
        </div>
      </div>

      <!-- Back to Services -->
      <div class="mt-12 opacity-0 animate-fade-in-up" style="animation-delay: 1.2s; animation-fill-mode: forwards;">
        <a href="/services/pr" class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 backdrop-blur-sm rounded-xl border border-white/20 text-white/90 hover:text-white hover:bg-white/20 transition-all duration-300">
          <span>‚Üê</span>
          <span>Back to PR Services</span>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }
  
  .animate-gradient-shift {
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
  }

  /* Top Breadcrumb Styling */
  .breadcrumb-top {
    font-size: 14px;
    margin-bottom: 0;
  }
  
  .breadcrumb-top ol {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
    align-items: center;
  }
  
  .breadcrumb-top li + li::before {
    content: ">";
    padding: 0 8px;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
  }
  
  .breadcrumb-top a {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.9);
    transition: color 0.2s ease;
    font-weight: 500;
  }
  
  .breadcrumb-top a:hover {
    color: rgba(255, 255, 255, 1);
    text-decoration: underline;
  }
  
  .breadcrumb-top li:last-child {
    color: rgba(255, 255, 255, 0.95);
    font-weight: 600;
  }
  
  /* Mobile responsiveness for top breadcrumbs */
  @media (max-width: 640px) {
    .breadcrumb-top {
      font-size: 12px;
    }
    
    .breadcrumb-top ol {
      flex-wrap: wrap;
    }
    
    .breadcrumb-top li + li::before {
      padding: 0 4px;
    }
  }
</style>
