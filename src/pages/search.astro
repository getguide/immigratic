---
// Search Results Page
export async function get({ url }) {
  const query = url.searchParams.get('q') || '';
  
  // Mock search results - in production, this would integrate with a real search system
  const searchResults = query ? [
    {
      title: 'Express Entry',
      description: 'Federal immigration programs for skilled workers',
      url: '/services',
      category: 'Immigration Programs'
    },
    {
      title: 'Provincial Nominee Program',
      description: 'Province-specific immigration pathways',
      url: '/services',
      category: 'Immigration Programs'
    },
    {
      title: 'Work Permits',
      description: 'Temporary work authorization in Canada',
      url: '/services',
      category: 'Immigration Programs'
    },
    {
      title: 'Study Permits',
      description: 'Student visas for Canadian education',
      url: '/services',
      category: 'Immigration Programs'
    },
    {
      title: 'Master Assessment Tool',
      description: 'AI-powered immigration eligibility assessment',
      url: '/tools/master-assessment',
      category: 'Tools'
    },
    {
      title: 'Immigration Calculator',
      description: 'Calculate your CRS score and eligibility',
      url: '/tools',
      category: 'Tools'
    }
  ] : [];
  
  return {
    body: {
      query,
      results: searchResults
    }
  };
}

const { query, results } = Astro.props;
