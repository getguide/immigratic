<script>
  // Slider update functions
  function updateCasesValue(value) {
    document.getElementById('cases-value').textContent = value + ' cases';
    updateROI();
  }

  function updateCurrentFeeValue(value) {
    const formatted = new Intl.NumberFormat('en-US', {
      style: 'currency',
      currency: 'USD',
      minimumFractionDigits: 0,
      maximumFractionDigits: 0
    }).format(value);
    document.getElementById('current-fee-value').textContent = formatted;
    updateROI();
  }

  function updateCurrentSuccessValue(value) {
    document.getElementById('current-success-value').textContent = value + '%';
    updateROI();
  }

  // Revenue Comparison Calculator
  function updateROI() {
    const casesEl = document.getElementById('cases-per-month');
    const currentFeeEl = document.getElementById('current-fee');
    const currentSuccessEl = document.getElementById('current-success-rate');
    
    const monthlyClientVolume = parseInt(casesEl?.value || '0') || 0;
    const currentWayPerClient = parseInt(currentFeeEl?.value || '0') || 500; // User's current fee
    const currentSuccessRate = parseInt(currentSuccessEl?.value || '0') / 100 || 0.65; // User's current success rate
    
    // Success rate improvements with Immigratic (realistic 15-25% improvement)
    const improvementRate = 0.20; // 20% average improvement
    const immigraticSuccessRate = Math.min(currentSuccessRate + improvementRate, 0.95); // Cap at 95%
    const immigraticWayPerClient = 2000; // Conservative total commission potential
    
    // Annual calculations factoring in success rates
    const annualClients = monthlyClientVolume * 12;
    
    // Current way: Limited by current success rate
    const currentSuccessfulClients = Math.round(annualClients * currentSuccessRate);
    const currentWayAnnual = currentSuccessfulClients * currentWayPerClient;
    
    // Immigratic way: Improved success rate + long-term commissions (40% need additional services)
    const immigraticSuccessfulClients = Math.round(annualClients * immigraticSuccessRate);
    const longTermConversionRate = 0.4; // 40% of successful clients need additional services
    const immigraticWayAnnual = (immigraticSuccessfulClients * currentWayPerClient) + 
                               (immigraticSuccessfulClients * longTermConversionRate * (immigraticWayPerClient - currentWayPerClient));
    
    const revenueMultiplier = Math.round(immigraticWayAnnual / currentWayAnnual);
    
    // Update display
    const currentRevenueEl = document.getElementById('current-revenue');
    const immigraticRevenueEl = document.getElementById('immigratic-revenue');
    const revenueMultiplierEl = document.getElementById('revenue-multiplier');
    const annualPotentialEl = document.getElementById('annual-potential');
    
    if (currentRevenueEl) currentRevenueEl.textContent = `$${currentWayPerClient.toLocaleString()}`;
    if (immigraticRevenueEl) immigraticRevenueEl.textContent = `$${immigraticWayPerClient.toLocaleString()}+`;
    if (revenueMultiplierEl) revenueMultiplierEl.textContent = `${revenueMultiplier}x`;
    if (annualPotentialEl) annualPotentialEl.textContent = `$${Math.round(immigraticWayAnnual).toLocaleString()}`;
  }
  
  // Update calculations on input change
  document.addEventListener('DOMContentLoaded', function() {
    const casesInput = document.getElementById('cases-per-month');
    const currentFeeInput = document.getElementById('current-fee');
    const currentSuccessInput = document.getElementById('current-success-rate');
    
    if (casesInput) {
      casesInput.addEventListener('input', function() {
        updateCasesValue(this.value);
      });
    }
    
    if (currentFeeInput) {
      currentFeeInput.addEventListener('input', function() {
        updateCurrentFeeValue(this.value);
      });
    }
    
    if (currentSuccessInput) {
      currentSuccessInput.addEventListener('input', function() {
        updateCurrentSuccessValue(this.value);
      });
    }
    
    // Set initial values and calculate
    updateCasesValue(casesInput?.value || '50');
    updateCurrentFeeValue(currentFeeInput?.value || '500');
    updateCurrentSuccessValue(currentSuccessInput?.value || '30');
    updateROI();
  });
</script>

