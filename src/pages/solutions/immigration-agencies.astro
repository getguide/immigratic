---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Immigration Agencies | Scale Your Practice with Advanced Technology | Immigratic">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-purple-900 via-blue-900 to-green-900">
    <!-- Animated Background -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-20 w-96 h-96 bg-purple-500/30 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-green-500/30 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-blue-500/20 rounded-full blur-2xl animate-float-gentle"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-left">
          <div class="inline-flex items-center px-4 py-2 bg-purple-500/20 rounded-full text-purple-300 text-sm font-medium mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Immigration Agencies
          </div>

          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white mb-6 sm:mb-8 opacity-0 animate-fade-in-up leading-tight px-4 sm:px-0" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
            Scale Your Practice
            <span class="block mt-2 sm:mt-4 bg-gradient-to-r from-purple-400 via-blue-400 to-green-400 bg-clip-text text-transparent animate-gradient-flow">
              with Advanced AI
            </span>
          </h1>
          
          <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-8 sm:mb-12 opacity-0 animate-fade-in-up leading-relaxed px-4 sm:px-0" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
            Transform your immigration practice with AI-powered case management, automated workflows, and intelligent decision support systems that handle 5x more cases efficiently.
          </p>

          <!-- Key Stats -->
          <div class="grid grid-cols-2 gap-6 mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 1.0s; animation-fill-mode: forwards;">
            <div class="text-center">
              <div class="text-4xl font-bold text-purple-400 mb-2">5<span class="text-2xl">x</span></div>
              <div class="text-gray-300 text-sm">More Cases Handled</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-green-400 mb-2 counter-animate" data-target="85">0</div>
              <div class="text-gray-300 text-sm">% Cost Reduction</div>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 opacity-0 animate-fade-in-up" style="animation-delay: 1.4s; animation-fill-mode: forwards;">
            <a href="/contact?utm_source=agencies_solution&utm_medium=hero_cta&utm_campaign=schedule_demo" class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-purple-600 to-green-600 text-white font-semibold rounded-full hover:from-purple-700 hover:to-green-700 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
              <span>Schedule Demo</span>
              <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            
            <a href="#roi-calculator" class="group inline-flex items-center px-8 py-4 bg-transparent border-2 border-white/30 text-white font-semibold rounded-full hover:bg-white/10 hover:border-white/50 transition-all duration-300 transform hover:scale-105">
              <span>Calculate ROI</span>
              <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Right Visual -->
        <div class="relative opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
          <!-- Main Case Management Dashboard -->
          <div class="relative bg-white/10 backdrop-blur-md rounded-3xl p-8 border border-white/20 shadow-2xl">
            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-red-400 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
                <div class="w-3 h-3 bg-green-400 rounded-full"></div>
              </div>
              <div class="text-white/70 text-sm">Case Management AI</div>
            </div>

            <!-- Dashboard Content -->
            <div class="space-y-4">
              <!-- Case Processing Stats -->
              <div class="bg-gradient-to-r from-purple-500/20 to-green-500/20 rounded-xl p-4">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-white text-sm">AI Case Analysis</span>
                  <span class="text-green-400 text-xs">99.2% accuracy</span>
                </div>
                <div class="w-full bg-white/20 rounded-full h-2">
                  <div class="bg-gradient-to-r from-purple-400 to-green-400 h-2 rounded-full w-full animate-pulse"></div>
                </div>
              </div>

              <!-- Active Cases -->
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-white/10 rounded-lg p-3">
                  <div class="text-white text-xs mb-1">Active Cases</div>
                  <div class="text-white text-lg font-bold counter-animate" data-target="1247">0</div>
                </div>
                <div class="bg-white/10 rounded-lg p-3">
                  <div class="text-white text-xs mb-1">Approved Today</div>
                  <div class="text-green-400 text-lg font-bold counter-animate" data-target="156">0</div>
                </div>
              </div>

              <!-- AI Insights -->
              <div class="space-y-2">
                <div class="flex items-center space-x-3 text-sm">
                  <div class="w-2 h-2 bg-purple-400 rounded-full animate-pulse"></div>
                  <span class="text-white/80">AI identified success pattern</span>
                </div>
                <div class="flex items-center space-x-3 text-sm">
                  <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
                  <span class="text-white/80">Automated compliance check</span>
                </div>
                <div class="flex items-center space-x-3 text-sm">
                  <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
                  <span class="text-white/80">Client notification sent</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Elements -->
          <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-purple-500 to-green-600 rounded-2xl flex items-center justify-center animate-float-gentle shadow-lg">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          
          <div class="absolute -bottom-4 -left-4 w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center animate-float-gentle shadow-lg" style="animation-delay: 1s;">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ROI Calculator -->
  <section id="roi-calculator" class="py-24 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
          Calculate Your
          <span class="bg-gradient-to-r from-purple-600 to-green-600 bg-clip-text text-transparent">
            ROI with Immigratic
          </span>
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          See how much you could save and earn with our advanced automation platform.
        </p>
      </div>

      <div class="bg-gradient-to-br from-purple-50 to-green-50 dark:from-gray-800 dark:to-gray-700 rounded-3xl p-8 shadow-2xl opacity-0 animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Input Section -->
          <div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Your Current Practice</h3>
            
            <div class="space-y-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cases per month</label>
                <input type="number" id="cases-per-month" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent dark:bg-gray-800 dark:text-white" value="50" min="1">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Average hours per case</label>
                <input type="number" id="hours-per-case" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent dark:bg-gray-800 dark:text-white" value="8" min="1">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Hourly rate ($)</label>
                <input type="number" id="hourly-rate" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent dark:bg-gray-800 dark:text-white" value="150" min="1">
              </div>
            </div>
          </div>

          <!-- Results Section -->
          <div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Your Potential with Immigratic</h3>
            
            <div class="space-y-6">
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
                <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">Monthly Time Savings</div>
                <div class="text-3xl font-bold text-purple-600 dark:text-purple-400" id="time-savings">320 hours</div>
              </div>
              
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
                <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">Additional Cases Capacity</div>
                <div class="text-3xl font-bold text-green-600 dark:text-green-400" id="additional-cases">+200 cases</div>
              </div>
              
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
                <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">Additional Monthly Revenue</div>
                <div class="text-3xl font-bold text-blue-600 dark:text-blue-400" id="additional-revenue">$240,000</div>
              </div>
              
              <div class="bg-gradient-to-r from-purple-600 to-green-600 rounded-xl p-6 shadow-lg">
                <div class="text-sm text-white/80 mb-1">Annual ROI</div>
                <div class="text-4xl font-bold text-white" id="annual-roi">2,400%</div>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="text-center mt-12">
          <a href="/contact?utm_source=agencies_solution&utm_medium=roi_calculator&utm_campaign=schedule_demo" class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-purple-600 to-green-600 text-white font-semibold rounded-full hover:from-purple-700 hover:to-green-700 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
            <span>Get Started Today</span>
            <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-to-br from-purple-900 via-blue-900 to-green-900 relative overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-r from-purple-600/20 to-green-600/20"></div>
      <div class="absolute top-20 right-20 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 left-20 w-80 h-80 bg-green-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
        Ready to Scale Your
        <span class="bg-gradient-to-r from-purple-400 to-green-400 bg-clip-text text-transparent">
          Immigration Practice?
        </span>
      </h2>
      
      <p class="text-xl text-gray-300 mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
        Join leading immigration agencies that have transformed their practice with Immigratic's advanced AI technology. Handle 5x more cases while delivering exceptional client service.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
        <a href="/contact?utm_source=agencies_solution&utm_medium=cta&utm_campaign=schedule_demo" class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-purple-600 to-green-600 text-white font-semibold rounded-full hover:from-purple-700 hover:to-green-700 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
          <span>Schedule Demo</span>
          <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a href="/assessment?utm_source=agencies_solution&utm_medium=cta&utm_campaign=free_assessment" class="group inline-flex items-center px-8 py-4 bg-transparent border-2 border-white/30 text-white font-semibold rounded-full hover:bg-white/10 hover:border-white/50 transition-all duration-300 transform hover:scale-105">
          <span>Free Practice Assessment</span>
          <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  // ROI Calculator
  function updateROI() {
    const casesEl = document.getElementById('cases-per-month') as HTMLInputElement;
    const hoursEl = document.getElementById('hours-per-case') as HTMLInputElement;
    const rateEl = document.getElementById('hourly-rate') as HTMLInputElement;
    
    const cases = parseInt(casesEl?.value || '0') || 0;
    const hours = parseInt(hoursEl?.value || '0') || 0;
    const rate = parseInt(rateEl?.value || '0') || 0;
    
    // Calculations based on 80% time savings and 5x capacity increase
    const timeSavings = Math.round(cases * hours * 0.8);
    const additionalCases = Math.round(cases * 4); // 5x total = 4x additional
    const additionalRevenue = additionalCases * hours * rate;
    const annualROI = Math.round((additionalRevenue * 12) / 120000 * 100); // Assuming $10k/month cost
    
    const timeSavingsEl = document.getElementById('time-savings');
    const additionalCasesEl = document.getElementById('additional-cases');
    const additionalRevenueEl = document.getElementById('additional-revenue');
    const annualROIEl = document.getElementById('annual-roi');
    
    if (timeSavingsEl) timeSavingsEl.textContent = `${timeSavings} hours`;
    if (additionalCasesEl) additionalCasesEl.textContent = `+${additionalCases} cases`;
    if (additionalRevenueEl) additionalRevenueEl.textContent = `$${additionalRevenue.toLocaleString()}`;
    if (annualROIEl) annualROIEl.textContent = `${annualROI}%`;
  }
  
  // Update ROI on input change
  document.addEventListener('DOMContentLoaded', function() {
    const inputs = ['cases-per-month', 'hours-per-case', 'hourly-rate'];
    inputs.forEach(id => {
      const element = document.getElementById(id);
      if (element) {
        element.addEventListener('input', updateROI);
      }
    });
    updateROI(); // Initial calculation
  });
</script>

<style>
  /* Custom animations */
  @keyframes gradient-flow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.2; transform: scale(1); }
    50% { opacity: 0.4; transform: scale(1.05); }
  }
  
  @keyframes float-gentle {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-10px) rotate(1deg); }
    66% { transform: translateY(5px) rotate(-1deg); }
  }
  
  .animate-gradient-flow {
    background-size: 200% 200%;
    animation: gradient-flow 3s ease infinite;
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }
  
  .animate-float-gentle {
    animation: float-gentle 6s ease-in-out infinite;
  }
  
  /* Enhanced shadows */
  .shadow-3xl {
    box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.25);
  }
</style>
