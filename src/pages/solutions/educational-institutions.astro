---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Educational Institutions | Smarter Recruitment, Higher Enrollment | Immigratic">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-blue-900 via-purple-900 to-blue-900">
    <!-- Animated Background -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-20 w-96 h-96 bg-blue-500/30 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-purple-500/30 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-green-500/20 rounded-full blur-2xl animate-float-gentle"></div>
    </div>

    <!-- Academic Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Floating Academic Icons -->
      <div class="absolute top-1/4 left-1/4 w-8 h-8 text-blue-400/40 animate-float-gentle">
        <svg fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 3L1 9l4 2.18v6L12 21l7-3.82v-6l2-1.09V17h2V9L12 3zm6.82 6L12 12.72 5.18 9 12 5.28 18.82 9zM17 15.99l-5 2.73-5-2.73v-3.72L12 15l5-2.73v3.72z"/>
        </svg>
      </div>
      <div class="absolute top-3/4 right-1/4 w-6 h-6 text-purple-400/40 animate-float-gentle" style="animation-delay: 1s;">
        <svg fill="currentColor" viewBox="0 0 24 24">
          <path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82zM12 3L1 9l11 6 9-4.91V17h2V9L12 3z"/>
        </svg>
      </div>
      <div class="absolute top-1/2 left-3/4 w-5 h-5 text-green-400/40 animate-float-gentle" style="animation-delay: 2s;">
        <svg fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      </div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-left">
          <div class="inline-flex items-center px-4 py-2 bg-blue-500/20 rounded-full text-blue-300 text-sm font-medium mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 3L1 9l4 2.18v6L12 21l7-3.82v-6l2-1.09V17h2V9L12 3zm6.82 6L12 12.72 5.18 9 12 5.28 18.82 9zM17 15.99l-5 2.73-5-2.73v-3.72L12 15l5-2.73v3.72z"/>
            </svg>
            Educational Institutions
          </div>

          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white mb-6 sm:mb-8 opacity-0 animate-fade-in-up leading-tight px-4 sm:px-0" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
            Smarter Recruitment,
            <span class="block mt-2 sm:mt-4 bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 bg-clip-text text-transparent animate-gradient-flow">
              Higher Enrollment
            </span>
          </h1>
          
          <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-8 sm:mb-12 opacity-0 animate-fade-in-up leading-relaxed px-4 sm:px-0" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
            From recruitment to immigration processing - we handle the entire journey to bring you more diverse, high-quality international students.
          </p>

          <!-- Key Stats -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 1.0s; animation-fill-mode: forwards;">
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-green-400 mb-2 counter-animate" data-target="25">0</div>
              <div class="text-gray-300 text-sm">% Higher Enrollment Rate</div>
            </div>
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-blue-400 mb-2 counter-animate" data-target="40">0</div>
              <div class="text-gray-300 text-sm">% More Diverse Applicants</div>
            </div>
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-purple-400 mb-2 counter-animate" data-target="60">0</div>
              <div class="text-gray-300 text-sm">% Smarter Recruitment</div>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 opacity-0 animate-fade-in-up" style="animation-delay: 1.4s; animation-fill-mode: forwards;">
            <a href="https://intake.immigratic.com/partnership?utm_source=education_solution&utm_medium=hero_cta&utm_campaign=schedule_demo" class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-full hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
              <span>Schedule Demo</span>
              <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            
            <a href="#case-study" class="group inline-flex items-center px-8 py-4 bg-transparent border-2 border-white/30 text-white font-semibold rounded-full hover:bg-white/10 hover:border-white/50 transition-all duration-300 transform hover:scale-105">
              <span>View Case Study</span>
              <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Right Visual -->
        <div class="relative opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
          <!-- Main Dashboard Mockup -->
          <div class="relative bg-white/10 backdrop-blur-md rounded-3xl p-8 border border-white/20 shadow-2xl">
            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-red-400 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
                <div class="w-3 h-3 bg-green-400 rounded-full"></div>
              </div>
              <div class="text-white/70 text-sm">International Student Portal</div>
            </div>

            <!-- Dashboard Content -->
            <div class="space-y-4">
              <!-- Enrollment Stats -->
              <div class="bg-gradient-to-r from-blue-500/20 to-purple-500/20 rounded-xl p-4">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-white text-sm">Application Processing</span>
                  <span class="text-green-400 text-xs">+60% faster</span>
                </div>
                <div class="w-full bg-white/20 rounded-full h-2">
                  <div class="bg-gradient-to-r from-blue-400 to-purple-400 h-2 rounded-full w-4/5 animate-pulse"></div>
                </div>
              </div>

              <!-- Student Applications -->
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-white/10 rounded-lg p-3">
                  <div class="text-white text-xs mb-1">Pending Review</div>
                  <div class="text-white text-lg font-bold counter-animate" data-target="247">0</div>
                </div>
                <div class="bg-white/10 rounded-lg p-3">
                  <div class="text-white text-xs mb-1">Approved Today</div>
                  <div class="text-green-400 text-lg font-bold counter-animate" data-target="89">0</div>
                </div>
              </div>

              <!-- Recent Activity -->
              <div class="space-y-2">
                <div class="flex items-center space-x-3 text-sm">
                  <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                  <span class="text-white/80">Document verified automatically</span>
                </div>
                <div class="flex items-center space-x-3 text-sm">
                  <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
                  <span class="text-white/80">Application status updated</span>
                </div>
                <div class="flex items-center space-x-3 text-sm">
                  <div class="w-2 h-2 bg-purple-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
                  <span class="text-white/80">Compliance check completed</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Elements -->
          <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center animate-float-gentle shadow-lg">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          
          <div class="absolute -bottom-4 -left-4 w-12 h-12 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center animate-float-gentle shadow-lg" style="animation-delay: 1s;">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation Bar -->
  <nav class="sticky top-0 z-50 bg-white/95 dark:bg-gray-900/95 backdrop-blur-xl border-b border-gray-200 dark:border-gray-700 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-center space-x-8 py-4">
        <a href="#overview" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300">Overview</a>
        <a href="#case-study" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300">Case Study</a>
        <a href="#roi-calculator" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300">ROI Calculator</a>
        <a href="#get-started" class="nav-link text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-300">Get Started</a>
      </div>
    </div>
  </nav>

  <!-- Smart Recruitment & Diversity -->
  <section id="overview" class="py-24 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
          Beyond Numbers:
          <span class="block bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mt-2">
            Quality & Diversity
          </span>
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          Our ImmiReport system doesn't just increase enrollment - it attracts higher-quality, more diverse international students who enhance your academic community.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Smart Recruitment -->
        <div class="group opacity-0 animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 group-hover:border-blue-400/50">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Intelligent Recruitment</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6">Our ImmiReport system analyzes global talent pools to identify and attract the highest-potential international students.</p>
            
            <ul class="space-y-3 text-sm text-gray-600 dark:text-gray-300">
              <li class="flex items-center">
                <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                <span>AI-powered candidate matching</span>
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-purple-500 rounded-full mr-3"></div>
                <span>Academic performance prediction</span>
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                <span>Success probability scoring</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Diversity Enhancement -->
        <div class="group opacity-0 animate-fade-in-up" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 group-hover:border-green-400/50">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Enhanced Diversity</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6">Reach untapped markets and attract students from 150+ countries, creating a truly global campus community.</p>
            
            <ul class="space-y-3 text-sm text-gray-600 dark:text-gray-300">
              <li class="flex items-center">
                <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                <span>Global market intelligence</span>
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                <span>Multi-language recruitment</span>
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-purple-500 rounded-full mr-3"></div>
                <span>Cultural diversity analytics</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Quality Assurance -->
        <div class="group opacity-0 animate-fade-in-up" style="animation-delay: 1.0s; animation-fill-mode: forwards;">
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-xl border border-gray-200 dark:border-gray-700 hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 group-hover:border-purple-400/50">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-green-600 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Higher Quality Students</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6">Advanced screening ensures you attract academically stronger students with higher graduation rates and better outcomes.</p>
            
            <ul class="space-y-3 text-sm text-gray-600 dark:text-gray-300">
              <li class="flex items-center">
                <div class="w-2 h-2 bg-purple-500 rounded-full mr-3"></div>
                <span>Academic excellence screening</span>
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                <span>Financial stability verification</span>
              </li>
              <li class="flex items-center">
                <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                <span>Success prediction modeling</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Passage Case Study -->
  <section id="case-study" class="py-24 bg-gradient-to-br from-blue-50 to-green-50 dark:from-gray-800 dark:to-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Case Study Header -->
      <div class="text-center mb-20">
        <div class="inline-flex items-center px-4 py-2 bg-green-500/10 rounded-full text-green-600 dark:text-green-400 text-sm font-medium mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          Client Success Story
        </div>
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
          How Passage
          <span class="block bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent mt-2">
            Streamlined Student Immigration
          </span>
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto opacity-0 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          A leading edu-tech startup helping international students study in Canada partnered with Immigratic to streamline their immigration processing and enhance student success rates.
        </p>
      </div>

      <!-- Professional Before/After Toggle -->
      <div class="max-w-4xl mx-auto" x-data="{ activeTab: 'before' }">
        
        <!-- Modern Toggle Switch -->
        <div class="flex justify-center mb-12">
          <div class="bg-gray-100 dark:bg-gray-800 p-1 rounded-xl shadow-sm">
            <div class="flex space-x-1">
              <button 
                @click="activeTab = 'before'"
                :class="activeTab === 'before' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                class="px-6 py-3 text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              >
                Before
              </button>
              <button 
                @click="activeTab = 'after'"
                :class="activeTab === 'after' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                class="px-6 py-3 text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              >
                After
              </button>
            </div>
          </div>
        </div>

        <!-- Content Container -->
        <div class="relative min-h-[400px]">
          
          <!-- Before Content -->
          <div 
            x-show="activeTab === 'before'"
            x-transition:enter="transition-opacity duration-300 ease-in-out"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="transition-opacity duration-200 ease-in-out"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            class="absolute inset-0"
          >
            <div class="bg-white dark:bg-gray-900 rounded-2xl p-8 shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-xl hover:scale-[1.02] transition-all duration-300 group cursor-pointer">
              
              <!-- Header -->
              <div class="flex items-center mb-8">
                <div class="w-12 h-12 bg-red-500 rounded-xl flex items-center justify-center mr-4 flex-shrink-0 group-hover:scale-110 group-hover:bg-gradient-to-br group-hover:from-red-500 group-hover:to-pink-500 transition-all duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 dark:text-white group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors duration-300">Before Immigratic</h3>
                  <p class="text-gray-500 dark:text-gray-400 text-sm mt-1 group-hover:text-gray-600 dark:group-hover:text-gray-300 transition-colors duration-300">Traditional manual process</p>
                </div>
              </div>

              <!-- Metrics -->
              <div class="space-y-6">
                <div class="flex items-center justify-between p-4 bg-red-50 dark:bg-red-900/10 rounded-lg group-hover:bg-red-100 dark:group-hover:bg-red-900/20 transition-all duration-300 hover:scale-105 cursor-pointer">
                  <div class="flex items-center space-x-3">
                    <span class="text-lg group-hover:animate-bounce">⏳</span>
                    <span class="text-gray-900 dark:text-gray-100 font-medium group-hover:font-semibold transition-all duration-300">Processing Time</span>
                  </div>
                  <span class="text-red-600 dark:text-red-400 font-semibold group-hover:scale-110 transition-transform duration-300">😤 8-12 weeks</span>
                </div>

                <div class="flex items-center justify-between p-4 bg-red-50 dark:bg-red-900/10 rounded-lg group-hover:bg-red-100 dark:group-hover:bg-red-900/20 transition-all duration-300 hover:scale-105 cursor-pointer" style="transition-delay: 50ms;">
                  <div class="flex items-center space-x-3">
                    <span class="text-lg group-hover:animate-bounce" style="animation-delay: 0.1s;">😵‍💫</span>
